.marketingHero
  .c
    z-index: 2
    padding-top: 70px
    @media (max-width: $breakpoint-md - 1)
      max-height 613px

  &__bgText
    @media (max-width: $breakpoint-md - 1)
      display: none;

  &__title
    font-size: 120px
    line-height: .9
    //line-height: 106px
    font-weight: bold
    position: relative
    margin-left: -7px
    margin-bottom: 36px
    @media (max-width: $breakpoint-lg - 1)
      font-size: 70px
      margin-left: 0
      margin-bottom: 28px
    @media (max-width: $breakpoint-md - 1)
      font-size: 48px
      margin-bottom: 17px
      margin-top: -170px

    span
      display: inline-block
      overflow: hidden
      background-image: url(./marketingHero-text.jpg);
      background-size: cover
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent
      @media (max-width: $breakpoint-lg - 1)
        font-size: 72px
      @media (max-width: $breakpoint-md - 1)
        font-size: 60px
        line-height: 1
        margin-bottom: -6px

  &__sub
    color: #006dfe
    font-size: 48px
    font-weight: bold;
    line-height: 1
    margin-left: -5px
    @media (max-width: $breakpoint-lg - 1)
      margin-left: 0
      line-height: 60px
    @media (max-width: $breakpoint-md - 1)
      font-size: 30px
      line-height: 36px

  &__image
    @media (max-width: $breakpoint-lg - 1)
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      transform scale(.85)
    @media (max-width: $breakpoint-mg - 1)
      transform scale(.55)

    img
      margin-left: -56px
      transform: translateX(50px)
      @media (max-width: $breakpoint-lg - 1)
        display: block;
        margin-left: -69px
      @media (max-width: $breakpoint-md - 1)
        margin-left: 20px

