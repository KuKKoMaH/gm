.coursesFaq
  position: relative;
  padding: 74px 0 21px
  background: url(./img/coursesFaq-bg.jpg) 50% 50%
  background-size: cover;
  @media (max-width: $breakpoint-lg - 1)
    padding: 59px 0 66px

  &__title
    margin-bottom: 135px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 107px;
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 82px;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 50%
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      width: 14px;
      height: 14px;
      background: #006dfe;
      margin-top: 36px;
      margin-left: -7px;

    &:after
      width: 1px;
      height: 21px;
      background: #1d1d1d;
      margin-top: 15px;
      margin-left: -1px


  &__items
    display: flex;
    margin: 0 -15px
    @media (max-width: $breakpoint-lg - 1)
      margin: 0 auto
      flex-direction column
      max-width 600px
    @media (max-width: $breakpoint-md - 1)
      max-width none


  &__col
    flex: 1
    padding: 0 15px
    @media (max-width: $breakpoint-lg - 1)
      &:last-child
        .coursesFaq__item:last-child
          margin-bottom: 0
    @media (max-width: $breakpoint-md - 1)
      padding: 0

  &__item
    margin-bottom: 73px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 68px

  &__header
    height: 93px
    display: flex;
    align-items center
    padding-left: 90px
    padding-right: 120px
    font-size: 18px
    line-height: 1.25
    color: #ffffff
    font-weight: bold;
    background: $blue
    position: relative;
    cursor: pointer;
    anim()

    &:hover
      background: darken($blue, 10%);

    &:before, &:after
      content ''
      position: absolute;

    &:before
      background: url(./img/sprite-coursesFaq-q.png)
      left: 0
      top: -50px

    &:after
      background: url(./img/sprite-coursesFaq-v.png)
      right: 63px;
      top: 41px;

  &__body
    background: #fff
    max-height: 0
    overflow: hidden
    anim()

  &__inner
    font-size: 18px
    line-height: 1.35
    padding: 15px 31px 22px


  &__image, &__image2
    position: absolute;
    z-index: 1
    left: 50%
    @media (max-width: $breakpoint-lg - 1)
      display: none;

  &__image
    margin-left: 376px;
    bottom: -244px;

  &__image2
    margin-left: 618px;
    bottom: 3px;

