.coursesTestimonials
  padding: 71px 0 69px
  background: url(./img/coursesTestimonials-bg.jpg) 50% 100%
  background-size: cover;
  @media (max-width: $breakpoint-lg - 1)
    padding: 65px 0 47px
  @media (max-width: $breakpoint-md - 1)
    padding: 56px 0 34px

  &__title
    margin-bottom: 100px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 56px;
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 47px;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 50%
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      width: 14px;
      height: 14px;
      background: #006dfe;
      margin-top: 36px;
      margin-left: -7px;

    &:after
      width: 1px;
      height: 21px;
      background: #1d1d1d;
      margin-top: 15px;
      margin-left: -1px

  &__image
    position: absolute;
    bottom: -182px;
    left: 50%;
    margin-left: -772px;
    z-index: 1

    &.lazy--visible
      transform none

    @media (max-width: $breakpoint-lg - 1)
      display: none;

.coursesTestimonials1
  margin-bottom: 2px
  @media (max-width: $breakpoint-lg - 1)
    margin-bottom: 28px
  @media (max-width: $breakpoint-md - 1)
    margin-bottom: 26px

  &__slider
    position: relative;
    @media (max-width: $breakpoint-lg - 1)
      overflow: hidden;

  &__items
    display: flex;
    flex-wrap wrap
    @media (max-width: $breakpoint-lg - 1)
      flex-wrap nowrap

  &__item
    width: 50%
    margin-bottom: 27px
    padding-left: 30px
    @media (max-width: $breakpoint-lg - 1)
      flex-shrink 0
      margin-bottom: 0
      padding-left: 0

  &__card
    display: flex;
    align-items flex-start
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column

  &__image
    position: relative;
    margin-left: 23px
    flex-shrink 0
    @media (max-width: $breakpoint-lg - 1)
      margin: 0 auto 32px

  &__img
    border: 13px solid #fff
    box-shadow 0px 10px 29px rgba(#253247, .18)

    &--back
      position: absolute;
      z-index: -1
      transform: rotate(19deg);
      top: 8px;
      left: -10px;

  &__content
    margin-left: 19px
    padding-top: 7px
    line-height: 24px
    @media (max-width: $breakpoint-lg - 1)
      text-align: center;
      margin: 0 auto
      max-width 530px

    p
      margin-bottom: 9px

  &__name
    font-size: 24px
    line-height: 36px
    margin-bottom: 16px
    margin-left: -6px
    @media (max-width: $breakpoint-lg - 1)
      margin: 0 0 8px

  &__nav
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      position: absolute;
      top: 94px

      &--prev
        right: 50%
        margin-right: 192px
        @media (max-width: $breakpoint-md - 1)
          margin-right: 181px


      &--next
        left: 50%
        margin-left: 192px
        @media (max-width: $breakpoint-md - 1)
          margin-left: 181px

.coursesTestimonials2
  &__slider
    overflow: hidden;
    position: relative;
    @media (max-width: $breakpoint-lg - 1)
      overflow: visible;


  &__items
    display: flex;

  &__item
    flex-shrink 0

  &__card
    background: #ffffff
    padding: 11px 11px 14px
    text-align: center;
    @media (max-width: $breakpoint-lg - 1)
      max-width 270px


  &__image
    display: block;
    margin-bottom: 6px
    max-width: 100%
    height: auto;

  &__name
    font-size: 24px
    line-height: 36px
    margin-bottom: 1px
    font-weight: bold;

  &__text
    line-height: 24px
    font-weight: bold;

  &__buttons
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      justify-content center
      margin-top: 24px

  &__nav
    display: flex;
    position: absolute;
    top: 94px
    @media (max-width: $breakpoint-lg - 1)
      position: static;
      margin: 0 7px

    &--prev
      left: 0px


    &--next
      right: 0px
