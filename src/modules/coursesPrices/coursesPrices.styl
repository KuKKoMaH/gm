.coursesPrices
  position: relative;
  padding: 69px 0 80px
  background: url(./img/coursesPrices-bg.jpg) 50% 100% no-repeat;
  @media (max-width: $breakpoint-lg - 1)
    padding: 65px 0 62px
  @media (max-width: $breakpoint-md - 1)
    padding: 61px 0 31px

  &__title
    margin-bottom: 101px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 98px;
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 53px;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 50%
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      width: 14px;
      height: 14px;
      background: #006dfe;
      margin-top: 36px;
      margin-left: -7px;

    &:after
      width: 1px;
      height: 21px;
      background: #1d1d1d;
      margin-top: 15px;
      margin-left: -1px

  &__items
    display: flex;
    margin: 0px -16px
    @media (max-width: $breakpoint-lg - 1)
      margin: 0

  &__item
    flex: 1
    padding: 0 16px
    @media (max-width: $breakpoint-lg - 1)
      flex 1 0 auto

  &__card
    position: relative;
    background: #ffffff
    border: 10px solid $blue
    border-bottom: 0
    text-align: center;
    display: flex;
    flex-direction column
    height: 100%
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      width: 362px
      margin: 0 auto

    &:before, &:after
      content: ''
      position: absolute;
      pointer-events none

    &:before
      left: -10px
      top: -10px
      border: 10px solid $black
      border-right: 0
      border-bottom: 0
      width: 69px
      height: 103px

    &:after
      right: -10px
      top: 257px
      height: 180px
      width: 10px
      background: $black

    &--grey
      border-color #e8e8e8
      height: auto;

      &:before, &:after
        display: none;

      .coursesPrices
        &__header
          color: $black

        &__text
          font-weight: normal;

          li:after
            background: #e8e8e8

        &__price
          font-weight: normal;
          color: $black

        &__info
          margin-top: 0
          font-weight: normal;

          &:before, &:after
            border-color: #e8e8e8

        &__button
          margin-bottom: -19px
          background: #e8e8e8
          color: $black
          border-color #e8e8e8

          &:hover
            border-color #e8e8e8

  &__header
    height: 89px
    display: flex;
    align-items center
    justify-content center
    position: relative;
    font-size: 24px
    line-height: 1
    font-weight: bold
    color: $blue

    &:after
      top: 100%

  &__text
    position: relative;
    padding: 36px 20px 24px
    font-weight: bold;
    font-size: 18px

    li
      &:after
        content ''
        display: block;
        width: 8px
        height: 8px
        background: $blue
        margin: 10px auto

      &:last-child:after
        display: none

  &__price
    position: relative;
    font-size: 30px
    line-height: 48px
    font-weight: bold;
    color: $blue
    padding: 4px 0
    margin-top: auto;

    &:before
      bottom: 100%

    &:after
      top: 100%

  &__info
    font-size: 24px
    line-height: 2
    font-weight: bold;
    min-height 83px
    display: flex;
    flex-direction column
    justify-content flex-end
    padding-bottom: 7px

    &:before, &:after
      content: ''
      position: absolute;
      border-top: 10px solid $blue
      width: 27px
      height: 27px
      bottom: 0
      background: #ffffff
      pointer-events none

    &:before
      left: -10px

    &:after
      right: -10px

  &__sub
    font-size: 16px
    line-height: 18px
    font-weight: normal;

  &__header:after, &__price:before, &__price:after
    content: ''
    display: block;
    height: 1px
    background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAwAAAABCAYAAADq6085AAAADklEQVR4AWMAgv8kYAYAEi0K9jucKugAAAAASUVORK5CYII=')
    opacity: .26
    position: absolute;
    left: 4px
    right: 4px

  &__button
    display: flex;
    justify-content center
    align-items center
    font-size: 24px
    color: #ffffff
    border: 2px solid $blue
    background: $blue
    anim()
    height: 63px
    margin: 0 26px

    &:hover
      color: $black
      background: #fff;
      border-color: $blue

  &__buttons
    @media (max-width: $breakpoint-md - 1)
      margin-top: 35px
      display: flex;
      justify-content center

  &__nav
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      display: flex;
      position: absolute;
      top: 398px
    @media (max-width: $breakpoint-md - 1)
      position: static;

    &--prev
      right: 50%
      margin-right: 194px
      @media (max-width: $breakpoint-md - 1)
        margin-right: 6px

    &--next
      left: 50%
      margin-left: 194px
      @media (max-width: $breakpoint-md - 1)
        margin-left: 6px

  &__image, &__image2
    pointer-events none
    position: absolute;
    left: 50%

    img
      opacity: 0
      anim(.2s)

      &.lazy--visible
        opacity: 1

  &__image
    top: 49px
    margin-left: -502px
    z-index: 2
    @media (max-width: $breakpoint-lg - 1)
      top: -116px;
      margin-left: -385px;

  &__image2
    bottom: -369px;
    margin-left: -701px;
    z-index: 3
    @media (max-width: $breakpoint-lg - 1)
      bottom: -214px;
      margin-left: -419px;
      img
        transform scale(.67)
    @media (max-width: $breakpoint-md - 1)
      bottom: -192px;
      margin-left: -319px;

