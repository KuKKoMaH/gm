.contacts
  background: url(../../images/noise.jpg)
  padding: 115px 0 120px
  @media (max-width: $breakpoint-lg - 1)
    padding: 98px 0 68px
  @media (max-width: $breakpoint-lg - 1)
    padding: 109px 0 74px

  .c
    position: relative
    z-index: 1
    display: flex
    align-items center
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column

  &__left
    width: 680px
    height: 525px
    border: 20px solid #fff;
    //box-shadow 0 0 25px 10px rgba($black, .1)
    padding: 10px
    flex-shrink 0
    margin-left: 10px
    @media (max-width: $breakpoint-lg - 1)
      width: 100%
      margin-left: 0

  &__border-outer
    height: 100%
    border: 10px solid #ffffff;
    padding: 10px
    position: relative

    &:before, &:after
      content: ''
      display: block
      position: absolute

    &:before
      background: url(../../images/sprite-corner1.png)
      top: -10px
      right: -10px

    &:after
      background: url(../../images/sprite-corner2.png)
      bottom: -10px
      left: -10px

  &__border-inner
    height: 100%
    background: #ddd
    position: relative

    &:before
      content: ''
      z-index: -1
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      box-shadow 0 0 45px 40px rgba($black, .05)

  &__map
    //position: relative
    height: 100%
    width: 100%
    z-index: 1

  &__right
    font-size: 18px
    line-height: 30px
    padding-left: 77px
    @media (max-width: $breakpoint-lg - 1)
      padding-left: 0
    @media (max-width: $breakpoint-md - 1)
      text-align: center

  &__cols
    @media (max-width: $breakpoint-lg - 1)
      display: flex
      margin-top: 43px
    @media (max-width: $breakpoint-md - 1)
      flex-direction column

  &__col
    flex: 1

  ul
    margin-bottom: 42px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 0

  li
    margin-bottom: 18px
    position: relative
    padding-left: 25px

    &:before
      content: ''
      display: block
      position: absolute
      width: 8px
      height: 8px
      background: $blue
      left: 0;
      top: 11px;
      @media (max-width: $breakpoint-md - 1)
        display: none

  .last
    margin-bottom: 8px
    @media (max-width: $breakpoint-lg - 1)
      display: none
    @media (max-width: $breakpoint-md - 1)
      display: block

    li
      margin-bottom: 0

  .sm
    display: none
    @media (max-width: $breakpoint-lg - 1)
      display: block
    @media (max-width: $breakpoint-md - 1)
      display: none

  &__button
    @media (max-width: $breakpoint-lg - 1)
      text-align: center
      margin-top: 25px