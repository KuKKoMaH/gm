@critical critical-portfolio.css
  .portfolioHero
    &__title
      position: relative
      font-family: 'Museo Sans Cyrl 700', sans-serif;
      font-size: 151px
      overflow: hidden
      margin-left: -2px
      @media (max-width: $breakpoint-lg - 1)
        font-size: 112px
      @media (max-width: $breakpoint-md - 1)
        font-size: 78px

      &--top
        display: block;
        line-height: 118px
        position: relative
        margin-left: -17px
        margin-bottom: -18px
        @media (max-width: $breakpoint-lg - 1)
          margin: 0 0 -2px
          line-height: 90px
        @media (max-width: $breakpoint-md - 1)
          line-height: 70px
          margin-bottom: -4px

      &--overflow
        display: block
        position: absolute
        top: 111px
        width: 50px
        left: 226px
        overflow: hidden
        height: 20px
        @media (max-width: $breakpoint-lg - 1)
          display: none

        &:before
          content: attr(data-text)
          position: absolute
          top: -118px
          left: -260px
          padding-left: 17px

      &--bottom
        @supports (-webkit-background-clip: text)
          background-image: url(../../images/textbg.jpg);
          background-size: cover
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent

        line-height: 171px
        display: inline-block
        margin-left: -34px
        @media (max-width: $breakpoint-lg - 1)
          margin: 0
          line-height: 130px
        @media (max-width: $breakpoint-md - 1)
          line-height: 90px

    &__sub
      margin-bottom: 10px
      font-size: 36px
      line-height: 48px
      color: $blue
      font-weight: bold
      margin-left: -3px
      max-width 680px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 32px
        max-width 500px

    &__image
      margin-left: -81px
      transform: translateX(50px)

    &__image2
      img
        transform: translateX(30px) rotate(15deg)
        @media (max-width: $breakpoint-lg - 1)
          display: block
          margin-left: 156px;
          bottom: -74px;
        @media (max-width: $breakpoint-md - 1)
          margin-left: 81px;
          bottom: -59px;
