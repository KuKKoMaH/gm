.coursesTeachers
  padding: 65px 0 96px
  @media (max-width: $breakpoint-lg - 1)
    padding: 65px 0 65px
  @media (max-width: $breakpoint-md - 1)
    padding: 72px 0 44px

  &__title
    margin-bottom:  59px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 75px;
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 40px;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 50%
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      width: 14px;
      height: 14px;
      background: #006dfe;
      margin-top: 36px;
      margin-left: -7px;

    &:after
      width: 1px;
      height: 21px;
      background: #1d1d1d;
      margin-top: 15px;
      margin-left: -1px

  &__content
    position: relative;
    padding-left: 36px
    max-height 760px
    @media (max-width: $breakpoint-lg - 1)
      max-height none
      padding-left: 0
      margin-bottom: 38px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 25px

  &__image
    margin: 0 auto
    display: block;
    opacity: 0
    anim(.3s)
    @media (max-width: $breakpoint-lg - 1)
      max-height 630px
      width: auto;

    &.lazy--visible
      opacity: 1

  &__name
    position: absolute;
    background: $blue
    width: 217px
    height: 95px
    color: #ffffff
    font-weight: bold;
    display: flex;
    justify-content center
    align-items center

    &--left
      left: 268px;
      top: 586px;
      @media (max-width: $breakpoint-lg - 1)
        left: 110px;
        top: 445px;
      @media (max-width: $breakpoint-md - 1)
        left: 50%
        margin-left: -228px
        top: 442px

    &--right
      left: 657px;
      top: 614px;
      @media (max-width: $breakpoint-lg - 1)
        left: 338px;
        top: 577px;
      @media (max-width: $breakpoint-md - 1)
        left: 50%
        top: 574px

    &:before
      content: ''
      width: 100%
      height: 100%
      position: absolute;
      border 10px solid $black
      border-left: 0;
      border-top: 0
      right: -10px
      bottom: -10px
      pointer-events none

  &__infos
    display: flex;
    justify-content space-between
    @media (max-width: $breakpoint-md - 1)
      flex-direction column
      max-width: 485px;
      margin: 57px auto 0;

  &__info
    width: 315px
    position: absolute
    font-size: 18px
    line-height: 30px
    @media (max-width: $breakpoint-lg - 1)
      position: static;

    &--left
      top: 226px
      left: -7px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: -32px
      @media (max-width: $breakpoint-md - 1)
        margin-top: 0

    &--right
      top: 10px
      left: 841px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 91px
      @media (max-width: $breakpoint-md - 1)
        margin-left: auto;
        margin-top: 25px

  &__label
    font-size: 24px
    font-weight: bold;
    margin-top: 15px

  &__block
    border: 20px solid $blue
    padding: 31px 0 0
    background: #fff url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAABCAYAAADeko4lAAAAEElEQVR4AWOgFEiqmHAhYwAQ4QHtJNbRGwAAAABJRU5ErkJggg==')
    text-align: center;
    position: relative;
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      border-width 8px
      padding-top: 42px
    @media (max-width: $breakpoint-md - 1)
      border-left: 0
      border-right: 0
      margin-left: -20px
      margin-right: -20px

  &__header
    font-size: 24px
    line-height: 30px
    font-weight: bold;
    margin-bottom: 16px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 28px

  &__slider
    overflow: hidden;
    position: relative;

  &__items
    display: flex;
    justify-content space-around
    @media (max-width: $breakpoint-md - 1)
      justify-content flex-start

  &__item
    max-width 360px
    position: relative;
    padding-bottom: 24px
    @media (max-width: $breakpoint-lg - 1)
      max-width 300px
      padding-bottom: 11px
    @media (max-width: $breakpoint-md - 1)
      flex-shrink 0
      max-width none

    &:after
      content: ''
      position: absolute;
      width: 191px
      height: 22px
      background: $black
      bottom: -1px
      left: 30px
      @media (max-width: $breakpoint-lg - 1)
        bottom: 0
        left: 54px
      @media (max-width: $breakpoint-md - 1)
        left: 50%
        margin-left: -98px

  &__icon
    display: block;
    margin: 0 auto 31px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 15px

  &__text
    font-size: 18px
    line-height: 30px
    padding-bottom: 30px
    @media (max-width: $breakpoint-md - 1)
      max-width 300px
      margin: 0 auto

  &__nav
    display: none;
    @media (max-width: $breakpoint-md - 1)
      display: flex;
      position: absolute;
      top: 60px

    &--prev
      right: 50%
      margin-right: 182px

    &--next
      left: 50%
      margin-left: 182px
