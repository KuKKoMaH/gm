.guaranties
  background: url(../../images/noise.jpg)
  padding: 100px 0 64px
  @media (max-width: $breakpoint-lg - 1)
    padding: 68px 0 72px
    position: relative
  @media (max-width: $breakpoint-md - 1)
    padding: 45px 0 66px

  &:before
    content: ''
    display: block
    position: absolute
    background: url(../../images/bust4.png);
    width: 252px
    height: 310px
    left: 50%
    margin-left: 397px;
    top: -99px;
    z-index: 1
    pointer-events none
    @media (max-width: $breakpoint-lg - 1)
      display: none

  .c
    position: relative
    z-index: 1

  &__title
    margin-left: -4px
    position: relative
    margin-bottom: 89px
    max-width: 680px
    @media (max-width: $breakpoint-lg - 1)
      max-width none
      text-align: center
      margin-bottom: 115px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 88px

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 2px
      @media (max-width: $breakpoint-lg - 1)
        left: 50%

    &:before
      width: 14px
      height: 14px
      background: $blue
      margin-top: 15px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 24px

    &:after
      width: 1px
      height: 26px
      background: $black
      margin-top: 29px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 38px

  &__item
    position: relative
    font-size: 18px
    line-height: 30px
    margin-bottom: 30px
    padding-left: 40px
    max-width: 530px
    @media (max-width: $breakpoint-lg - 1)
      max-width 440px
    @media (max-width: $breakpoint-md - 1)
      max-width none
      text-align: center
    &:before, &:after
      content: ''
      display: block
      position: absolute
      left: 0
      top: 10px
      @media (max-width: $breakpoint-md - 1)
        left: 50%
        top: 100%

    &:before
      width: 30px
      height: 7px
      margin-left: -2px
      background: $black
      @media (max-width: $breakpoint-md - 1)
        margin-left: -20px
        margin-top: 12px

    &:after
      margin-top: 1px
      width: 10px
      height: 10px
      margin-left: 18px
      background: $blue
      @media (max-width: $breakpoint-md - 1)
        margin-left: 0px
        margin-top: 14px

  &__aside
    position: absolute
    right: 102px
    bottom: 0
    @media (max-width: $breakpoint-lg - 1)
      position: static
      text-align: center
      margin-top: 57px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 65px
    &:before
      content:''
      display: block
      position: absolute
      background: url(../../images/document.png) 50% 50% no-repeat
      background-size: contain
      width: 515px
      height: 434px
      bottom: 100%
      margin-bottom: 16px
      left: 0
      margin-left: -31px
      @media (max-width: $breakpoint-lg - 1)
        bottom auto
        top: 150px
        left: auto
        margin: 0
        right: 17px
        width: 300px
        height: 300px
      @media (max-width: $breakpoint-md - 1)
        background-image: none;
        display: none

