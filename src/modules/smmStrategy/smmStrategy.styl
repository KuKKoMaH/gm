  &__text
    font-size: 18px
    line-height: 1

  &__sup
    //line-height: 1.875
    line-height: 1.5

    span
      color: $blue

  &__text + &__sup
    position: relative;
    margin-top: 8px

    &:before, &:after
      content: ''
      position: absolute;
      bottom: 100%
      left: 50%
      transform translateX(-50%)

    &:before
      width: 245px
      height: 1px
      background: #000000

    &:after
      width: 51px
      height: 2px
      background: $blue
      margin-left: 55px

  &__icon
    height: 68px
    position: relative;

    &:before
      content: ''
      position: absolute;
      left: 50%
      top: 50%
      transform translate(-50%, -50%)

  &__block
    width: 370px
    height: 116px
    margin: 46px auto 48px
    border: 6px solid $blue;
    box-shadow 0 0 25px 0 rgba($blue, .2)
    display: flex;
    flex-direction column
    align-items center
    justify-content center
    font-size: 30px

  &__note
    font-size: 18px
    border-bottom: 1px solid $blue;
