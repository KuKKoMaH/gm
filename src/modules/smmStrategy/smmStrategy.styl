.smmStrategy
  position: relative;
  background: #f7f7f7 url('data:image/gif;base64,R0lGODlhFAAUAPABANTU1AAAACH5BAUAAAEALAAAAAAUABQAAAIVjI95AOrJnpy02ouz3rz7D4biSE4FADs=') 50% 50%;
  @media (max-width: $breakpoint-md - 1)
    padding: 69px 0 51px

  &__image, &__image2
    position: absolute
    display: block
    z-index: 1
    anim(.3s)
    pointer-events none

    &.lazy--visible
      transform none

    @media (max-width: $breakpoint-lg - 1)
      background-image: none;
      display: none

  &__image
    left: 50%
    margin-left: 355px
    bottom: 0
    transform translateX(30px)

  &__image2
    right: 50%
    margin-right: 198px;
    bottom: 156px;
    transform translateX(-30px)

  &__section
    position: relative;

    &--1
      height: 453px
      @media (max-width: $breakpoint-lg - 1)
        height: 731px

    &--2
      height: 602px
      @media (max-width: $breakpoint-lg - 1)
        height: 629px

    &--3
      height: 272px
      @media (max-width: $breakpoint-lg - 1)
        height: 189px

    @media (max-width: $breakpoint-md - 1)
      height: auto;

  &__item
    position: absolute;
    left: 50%
    top: 50%
    text-align: center;
    margin-bottom: 20px
    @media (max-width: $breakpoint-md - 1)
      position: static;
      margin-left: 0 !important
      margin-top: 0 !important

    &:after
      content ''
      position: absolute;
      @media (max-width: $breakpoint-lg - 1)
        display: none;

    for icon in '01' '02' '03' '04' '05' '06' '07' '08' '09' '10' '11' '12' '13' '14' /*'15'*/ '16' '17'
      &--{icon}
        &:after
          background: url('./img/sprite-smmStrategy-arrow-' + icon '.png')

    for icon in '01' '02' '03' '04' '05' '06' '07' '08' '09' '10' '11' '12' '13' '14' '15' '16' '17'

