  &__link
    position: relative;
    border: 15px solid #006dfe
    font-size: 48px
    line-height: 1
    display: flex;
    align-items center
    justify-content center
    padding: 0 0 0 74px
    anim()
    @media (max-width: $breakpoint-lg - 1)
      width: 100%
      margin-top: 40px
      padding: 51px 0 51px 41px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 34px
      padding: 38px 0 32px 36px

    &:hover
      background: #006dfe
      color: #ffffff

    &:after
      content: ''
      position: absolute;
      width: 72px
      height: 7px
      background: #000
      top: 100%
      right: 0
      margin-top: 15px
      margin-right: -15px
