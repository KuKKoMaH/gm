.siteTypes
  position: relative
  padding: 69px 0 32px
  @media (max-width: $breakpoint-lg - 1)
    padding: 68px 0 24px
  @media (max-width: $breakpoint-md - 1)
    padding: 60px 0 40px

  .c
    position: relative
    z-index: 1

  &__title
    text-align: center
    font-weight: bold
    font-size: 48px
    margin-bottom: 128px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 152px
    @media (max-width: $breakpoint-md - 1)
      font-size: 36px
      margin-bottom: 145px

  &__items
    display: flex
    flex-wrap: wrap
    justify-content center
    @media (max-width: $breakpoint-lg - 1)
      flex-wrap nowrap
      justify-content flex-start

  &__item
    width: 33.3333%
    flex-shrink 0
    padding: 0 11px 76px
    text-align: center
    @media (max-width: $breakpoint-lg - 1)
      width: 393px

  &__inner
    height: 100%
    border: 20px solid #e9e9e9
    border-bottom: 0
    position: relative
    padding: 76px 0 63px

    &:before, &:after
      content: ''
      display: block
      position: absolute
      width: 15px
      height: 20px
      background: #e9e9e9
      bottom: 0

    &:before
      left: 0

    &:after
      right: 0

  &__name
    background: #ffffff
    height: 79px
    left: 15px
    right: 15px
    top: -45px
    display: flex
    align-items center
    justify-content center
    font-size: 24px
    position: absolute
    box-shadow 0 7px 25px -6px rgba(0,0,0,0.15)

    &:after
      content: ''
      display: block
      position: absolute
      left: 50%
      top: 100%
      margin-top: -14px
      margin-left: -7px
      width: 14px
      height: 44px
      background-image: url('data:image/svg+xml;base64,');

  &__desc
    padding: 0 28px
    font-size: 18px
    line-height: 30px

  &__price
    padding-top: 19px
    font-size: 36px

    span
      font-weight: bold
      color: $blue

  &__button
    position: absolute
    bottom: 0
    margin-bottom: -22px
    left: 28px
    right: 28px
    height: 62px
    border: 2px solid $blue;
    display: flex
    align-items center
    justify-content center
    font-size: 18px
    font-weight: bold
    anim()

    &:hover
      background: $blue
      color: #fff

  &__arrow
    flex-shrink 0
    display: none

    .navBtn
      display: flex

    @media (max-width: $breakpoint-lg - 1)
      display: flex
      align-items center
      width: auto

  &:before
    content: ''
    display: block
    position: absolute
    bottom: 0
    left: 50%
    margin-left: 575px
    right: 0
    height: 7px
    background: $blue
    z-index: 1

  &__image
    display: block
    position: absolute
    left: 50%
    margin-left: 372px;
    bottom: -194px;
    pointer-events: none;
    z-index: 2;
    transform translateX(-30px) rotate(-15deg)
    anim(.3s)

    &.lazy--visible
      transform none

    @media (max-width: $breakpoint-lg - 1)
      display: none
