.footer
  margin-top: auto

  &__container
    display: flex
    justify-content space-between
    align-items center
    padding-top: 21px
    padding-bottom: 21px

  &__copyright
    margin-top: 20px

  &__menu

    a
      border: 0
      color: $black

    ul
      margin: 0

    li
      &:before
        display: none;

    & > ul
      display: flex;
      @media (max-width: $breakpoint-lg - 1)
        flex-direction column

    //& > ul > li
    //  width: 200px

    & > ul > li > a
      display: none;

    & > ul > li > ul > li > ul
      margin-top: 4px

    li
      margin-bottom: 12px

    a
      display: block
      padding-right: 11px

      anim()

      &:before
        content: ''
        display: inline-block
        vertical-align: middle
        margin-right: 7px
        width: 5px
        height: 5px
        background: $blue

      &:hover
        font-weight: bold
        padding-left: 11px
        padding-right: 0

  &__contacts
    position: relative
    line-height: 30px
    padding-left: 26px
    margin-top: 30px
    @media (max-width: $breakpoint-md - 1)
      display: none

    &--sm
      display: none
      @media (max-width: $breakpoint-md - 1)
        display: block
        margin-top: 8px

  &__phone-icon
    position: absolute
    width: 17px
    height: 17px
    left: 0px;
    top: 9px;

  &__mail-icon
    position: absolute
    width: 18px
    height: 14px
    left: 0px;
    top: 39px;

  &__bottom
    background: #000000
    height: 74px
    @media (max-width: $breakpoint-md - 1)
      height: auto
      padding: 25px 0

    .c
      height: 100%
      display: flex
      align-items center
      @media (max-width: $breakpoint-md - 1)
        flex-direction column

  &__links
    flex: 1
    display: flex
    align-items center
    justify-content center

  &__link
    margin-right: 38px
    color: #fff
    border: 0
    @media (max-width: $breakpoint-md - 1)
      margin: 0 8px 17px


    &:hover
      text-decoration: underline

  &__socials
    margin-left: auto
    @media (max-width: $breakpoint-md - 1)
      margin: 0 auto

  &__social
    display: inline-block
    margin-left: 11px
    border: 0

    svg
      width: 38px
      height: 38px
      display: block

    &:first-child
      margin-left: 0
