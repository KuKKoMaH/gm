.footer
  &__container
    display: flex
    justify-content space-between
    align-items center
    padding-top: 21px
    padding-bottom: 21px

  &__copyright
    margin-top: 20px

  &__menu
    width: 200px
    li
      margin-bottom: 12px

    a
      display: block
      padding-right: 11px

      anim()
      &:before
        content: ''
        display: inline-block
        vertical-align: middle
        margin-right: 7px
        width: 5px
        height: 5px
        background: $blue

      &:hover
        font-weight: bold
        padding-left: 11px
        padding-right: 0

  &__contacts
    position: relative
    line-height: 30px
    padding-left: 26px
    @media (max-width: $breakpoint-md - 1)
      display: none

    &--sm
      display: none
      @media (max-width: $breakpoint-md - 1)
        display: block
        margin-top: 8px

  &__phone-icon
    position: absolute
    width: 17px
    height: 17px
    left: 0px;
    top: 9px;

  &__mail-icon
    position: absolute
    width: 18px
    height: 14px
    left: 0px;
    top: 39px;

  &__bottom
    background: #000000
    color: #ffffff
    height: 74px
    @media (max-width: $breakpoint-md - 1)
      height: auto
      padding: 25px 0

    .c
      height: 100%
      display: flex
      align-items center
      @media (max-width: $breakpoint-md - 1)
        flex-direction column

  &__link
    margin-right: 38px
    @media (max-width: $breakpoint-md - 1)
      margin-right: 0;
      margin-bottom: 17px

    &:hover
      text-decoration: underline

  &__socials
    margin-left: auto
    @media (max-width: $breakpoint-md - 1)
      margin: 0 auto

  &__social
    display: inline-block
    margin-left: 11px
    svg
      width: 38px
      height: 38px
      display: block

    &:first-child
      margin-left: 0