@critical critical-smm.css
  .smmHero
    .c
      z-index: 3

    &__title
      display: block;
      font-size: 120px
      line-height: 100px
      font-weight: bold
      margin-left: -8px
      @media (max-width: $breakpoint-lg - 1)
        margin-left: 0
      @media (max-width: $breakpoint-md - 1)
        font-size: 78px
        line-height: 78px

    &__bg
      display: block
      background: url(../../images/textbg.jpg) 50% 50%;
      background-size: cover
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent
      @media (max-width: $breakpoint-lg - 1)
        font-size: 100px
      @media (max-width: $breakpoint-md - 1)
        font-size: 78px

    &__sub
      display: block;
      font-size: 36px
      line-height: 48px
      font-weight: bold
      color: $blue
      margin-left: -4px
      margin-top: 30px
      @media (max-width: $breakpoint-lg - 1)
        margin-left: 0
        line-height: 60px
        margin-top: 35px
      @media (max-width: $breakpoint-md - 1)
        font-size: 36px
        line-height: 48px
        margin-top: 25px

    &__image
      margin-left: -45px;
      margin-bottom: -4px;
      transform: translateX(50px)

    &__rocket
      position: absolute;
      pointer-events: none;
      z-index: 2;
      left: 50%;
      bottom: 0;
      &.lazy--visible
        opacity: 0

      &--1
        margin-left: -223px;
        margin-bottom: 454px;

      &--2
        margin-left: -48px;
        margin-bottom: 324px;
        width: 125px;


      &--animate
        animation-fill-mode both
        &^[1]--1
          animation: rocket1 1s both ease-in-out .3s;
        &^[1]--2
          animation: rocket2 1s both ease-in-out .3s;

    @keyframes rocket1 {
      0% {
        transform: translate(300px, 240px)
      }
      30% {
        opacity: 1
      }
      100%  {
        opacity: 1
        transform: translate(0, 0);
      }
    }
    @keyframes rocket2 {
      0% {
        transform: translate(140px, 120px)
      }
      30% {
        opacity: 1
      }
      100%  {
        opacity: 1
        transform: translate(0, 0);
      }
    }

    &__image2
      margin-left: 90px;
      margin-bottom: -137px;
      z-index: 4
      img
        transform: translateX(30px) rotate(15deg)
      @media (max-width: $breakpoint-md - 1)
        width: 205px;
        margin-left: 18px;
        margin-bottom: -103px;

