.coursesChannels
  padding: 78px 0 4px
  @media (max-width: $breakpoint-lg - 1)
    padding: 61px 0 36px
  @media (max-width: $breakpoint-md - 1)
    padding: 61px 0 58px

  &__title
    margin-bottom: 112px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 100px;
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 105px;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 50%

    &:before
      width: 14px;
      height: 14px;
      background: #006dfe;
      margin-top: 36px;
      margin-left: -7px;

    &:after
      width: 1px;
      height: 21px;
      background: #1d1d1d;
      margin-top: 15px;
      margin-left: -1px

  &__items
    display: flex;
    flex-wrap wrap
    @media (max-width: $breakpoint-lg - 1)
      justify-content center
    @media (max-width: $breakpoint-md - 1)
      flex-wrap nowrap
      justify-content flex-start

  &__item
    width: 33.333%
    position: relative;
    margin-bottom: 107px
    @media (max-width: $breakpoint-lg - 1)
      width: 300px
      margin-bottom: 22px
    @media (max-width: $breakpoint-md - 1)
      width: auto;
      flex-shrink 0
      display: flex;

    &:nth-child(n+4)
      &:before
        content: ''
        position: absolute;
        background: url(./img/sprite-coursesChannels-lines.png)
        bottom: 100%
        margin-bottom: 19px;
        left: 96px;
        @media (max-width: $breakpoint-lg - 1)
          display: none;

    &:nth-child(2n + 1)
      &:before
        transform rotate(180deg)

    &:after
      content: ''
      position: absolute;
      left: 153px;
      right: -9px;
      height: 1px;
      bottom: 22px;
      background: $blue;
      @media (max-width: $breakpoint-lg - 1)
        display: none;

  &__text
    font-size: 24px
    line-height: 1;
    font-weight: bold;
    position: absolute;
    left: 149px
    bottom: 44px
    @media (max-width: $breakpoint-lg - 1)
      left: 173px
    @media (max-width: $breakpoint-md - 1)
      position: static;
      display: flex;
      align-items flex-end
      padding-bottom: 43px;
      padding-left: 40px;

  &__counter
    font-family: 'Arial', sans-serif;
    font-weight: 900;
    font-size: 72px
    line-height: 1
    padding-top: 9px
    text-indent -43px

    position: relative;
    width: 81px
    height: 115px
    border: 6px solid $blue
    margin-left: 27px
    @media (max-width: $breakpoint-lg - 1)
      margin-left: 51px

    &:before
      content: ''
      position: absolute;
      width: 8px
      left: -7px;
      top: 7px;
      height: 88px;
      background: #ffffff

    &:after
      content: attr(data-text)
      position: absolute;
      top: 16px;
      left: 9px;
      color: transparent
      -webkit-text-stroke: 2px $blue;

    span
      position: relative;
      z-index: 1

  &__image, &__image2
    position: absolute;
    left: 50%
    @media (max-width: $breakpoint-lg - 1)
      display: none;

  &__image
    margin-left: -28px;
    bottom: -261px;
    z-index: 2

  &__image2
    margin-left: -21px;
    bottom: -235px;
    z-index: 1

  &__buttons
    display: none;
    @media (max-width: $breakpoint-md - 1)
      margin-top: 42px
      display: flex;
      justify-content center

  &__nav
    display: flex;
    margin: 0 7px
