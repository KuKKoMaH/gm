.seoForm
  padding: 64px 0 55px
  @media (max-width: $breakpoint-lg - 1)
    padding: 59px 0 59px
  @media (max-width: $breakpoint-md - 1)
    padding: 52px 0 0

  &__title
    margin-bottom: 27px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 78px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 13px

    &:before, &:after
      content: ''
      display: none
      position: absolute
      top: 100%
      left: 50%
      @media (max-width: $breakpoint-lg - 1)
        display: block;
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      width: 14px
      height: 14px
      background: $blue
      margin-top: 15px
      margin-left: -6px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 24px

    &:after
      width: 1px
      height: 26px
      background: $black
      margin-top: 29px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 38px

  &__content
    display: flex;
    align-items center
    @media (max-width: $breakpoint-md - 1)
      flex-direction column

  &__text
    margin-right: auto;
    padding-left: 313px
    @media (max-width: $breakpoint-lg - 1)
      padding-left: 0
    @media (max-width: $breakpoint-md - 1)
      text-align: center;
      margin-right: 0
      margin-bottom: 50px

    li
      margin-bottom: 30px
      @media (max-width: $breakpoint-md - 1)
        position: relative;

      &:last-child
        margin-bottom: 0

      &:before
        content: ''
        width: 6px
        height: 6px
        display: inline-block;
        vertical-align: middle;
        margin-right: 9px
        background: $blue
        @media (max-width: $breakpoint-md - 1)
          position: absolute;
          top: 100%
          left: 50%
          margin-left: -3px
          margin-top: 12px

  &__form
    padding: 15px 0 13px
    @media (max-width: $breakpoint-md - 1)
      position: relative;

  &__inner
    flex-shrink 0
    text-align: center;
    position: relative;
    width 461px
    border: 20px solid $blue
    border-top: 0
    border-bottom: 0
    padding-bottom: 38px

    &:before, &:after
      bottom: 0

    .btn
      margin-top: 11px

  &__header
    font-size: 24px
    line-height: 1.25
    font-weight: bold;
    color: $blue
    padding-top: 17px
    margin-bottom: 16px

    &:before, &:after
      top: 0

  &__inner, &__header
    &:before, &:after
      content ''
      position: absolute;
      width: 20px
      height: 20px
      background: $blue

    &:before
      left: 0

    &:after
      right: 0

  &__image
    position: absolute;
    left: -43px
    bottom: -55px
    transform: translateX(-50px)
    transform-origin 50% 100%
    z-index: 2
    anim(.35s)

    &.lazy--visible
      transform: none

    @media (max-width: $breakpoint-lg - 1)
      bottom: -59px
      left: 132px
      transform: scale(.53) translateX(-50px)
      &.lazy--visible
        transform: scale(.53)
    @media (max-width: $breakpoint-md - 1)
      bottom: 100%
      left: -91px
      transform: scale(.62) translateX(-50px)
      &.lazy--visible
        transform: scale(.62)
