.coursesProgram
  padding: 67px 0 111px
  @media (max-width: $breakpoint-lg - 1)
    padding: 67px 0 130px
  @media (max-width: $breakpoint-md - 1)
    padding: 64px 0 133px

  &__title
    margin-bottom: 76px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 95px;
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 34px;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 50%
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      width: 14px;
      height: 14px;
      background: #006dfe;
      margin-top: 36px;
      margin-left: -7px;

    &:after
      width: 1px;
      height: 21px;
      background: #1d1d1d;
      margin-top: 15px;
      margin-left: -1px

  &__items
    display: flex;
    padding: 0 167px 0 10px
    @media (max-width: $breakpoint-lg - 1)
      padding: 0

  &__item
    flex: 1
    min-width 0
    position: relative;
    anim(.2s)
    @media (max-width: $breakpoint-lg - 1)
      flex-shrink 0
      min-width auto
      padding: 0 22px
      margin-top: 75px !important
    @media (max-width: $breakpoint-md - 1)
      margin-top: 0px !important

      &.swiper-slide-active
        margin-top: 0 !important

    for index in 1 2 3 4 5 6
      &:nth-child({index})
        z-index: 7 - index;
        margin-top: (47 * (index - 1)) px;


    &--active
      z-index: 7 !important

      .coursesProgram
        &__card, &__card:hover
          box-shadow 20px 30px 35px 0px rgba(29, 29, 29, 0.55)
          @media (max-width: $breakpoint-lg - 1)
            box-shadow 20px 30px 35px 0px rgba(29, 29, 29, 0.15)

  &__card
    position: relative;
    width 362px
    background: #f9f9f9
    border-top: 11px solid #f9f9f9
    box-shadow 20px 30px 35px 0px rgba(29, 29, 29, 0.15)
    cursor: pointer;
    anim(.2s)

    &:hover
      box-shadow 20px 30px 35px 0px rgba(29, 29, 29, 0.35)
      @media (max-width: $breakpoint-lg - 1)
        box-shadow 20px 30px 35px 0px rgba(29, 29, 29, 0.15)


    &:before
      content: ''
      position: absolute;
      z-index: -1
      border: 10px solid $black
      top: 9px;
      bottom: -20px;
      left: 20px;
      right: -20px;

  &__header
    background: $blue
    height: 72px
    display: flex;
    justify-content center
    align-items center
    margin-bottom: 44px
    font-size: 24px
    font-weight: bold;
    color: #ffffff

    span
      position: relative;

      &:before
        content: ''
        position: absolute;
        width: 7px;
        height: 57px;
        background: #1d1d1d;
        right: 100%;
        top: 3px;
        margin-right: 22px;

  &__icon
    position: relative;
    height: 80px
    margin-bottom: 24px

    img
      position: absolute;
      top: 50%
      left: 50%
      transform translate(-50%, -50%)

  &__name
    font-size: 18px
    line-height: 30px
    text-align: center;
    font-weight: bold;
    padding: 0 20px
    margin-bottom: 13px

  &__text
    padding: 0 20px 54px
    font-size: 18px
    line-height: 30px
    text-align: center;

  &__buttons
    display: none
    @media (max-width: $breakpoint-lg - 1)
      display: flex
      align-items center
      justify-content center
      margin-top: 5px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 70px

  &__nav
    display: flex
    margin: 0 7px


  &__image, &__image2
    pointer-events none
    position: absolute;
    left: 50%
    @media (max-width: $breakpoint-lg - 1)
      display: none;

    img
      opacity: 0
      anim(.2s)

      &.lazy--visible
        opacity: 1

  &__image
    bottom: -138px;
    margin-left: -717px;
    z-index: 2

  &__image2
    top: 23px;
    margin-left: 320px;
    z-index: 9
