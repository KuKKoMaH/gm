.blog
  background: #f4f4f4
  padding: 49px 0 50px
  @media (max-width: $breakpoint-lg - 1)
    padding: 23px 0 50px
  @media (max-width: $breakpoint-md - 1)
    padding: 38px 0 50px

  &__tags
    margin: 0 -6px 49px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 34px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 37px

  &__tag
    border: 2px solid #006dfe
    height: 59px
    padding: 0 22px
    margin: 6px
    display: inline-flex;
    align-items center
    justify-content center
    text-align: center;
    anim()

    &:hover, &--active
      background: #006dfe
      color: #ffffff

  &__item
    background: #ffffff
    display: flex;
    padding: 7px
    margin-bottom: 35px
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      padding: 0
      margin-bottom: 25px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 23px


  &__image
    width: 355px
    //height: 298px
    border-bottom: 6px solid #006dfe
    margin-bottom: -25px
    flex-shrink 0
    background-size: cover
    background-position: 50% 50%
    @media (max-width: $breakpoint-lg - 1)
      width: 100%
      height: 280px
      margin-bottom: 0
      border: 0

  &__content
    display: flex;
    flex-direction column

  &__title
    padding: 29px 45px 19px 42px
    font-size: 30px
    line-height: 1
    @media (max-width: $breakpoint-lg - 1)
      padding: 36px 24px 19px 23px
    @media (max-width: $breakpoint-md - 1)
      padding: 17px 22px 13px 22px

    &:hover
      text-decoration: underline

  &__text
    line-height: 1.5
    padding: 0px 45px 52px 48px
    @media (max-width: $breakpoint-lg - 1)
      padding: 0px 24px 23px 27px

  &__footer
    padding-left: 48px
    margin-top: auto;
    border-top: 1px solid #ebebeb
    display: flex;
    height: 43px
    align-items center
    @media (max-width: $breakpoint-lg - 1)
      height: 63px
      padding-left: 25px

  &__date
    margin-right: 20px

  &__link
    margin-left: auto;
    font-size: 18px
    background: #ffffff
    margin-top: -45px
    padding: 0 33px 0 18px
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 0
      padding-right: 27px
    @media (max-width: $breakpoint-md - 1)
      padding-right: 24px
      padding-left: 0

    &:before
      content: ''
      display: inline-block;
      vertical-align: middle;
      margin-right: 8px
      width: 7px
      height: 7px
      background: #006dfe

    &:hover
      text-decoration: underline

  &__metriks
    display: flex;

  &__metrik
    position: relative;
    margin-right: 25px
    padding-left: 31px

    &:last-child
      margin-right: 0

    svg
      position: absolute;
      fill: #006dfe
      stroke: #006dfe
      width: 20px
      height: 20px
      left: 14px
      top: 50%
      transform translate(-50%, -50%)
