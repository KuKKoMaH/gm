.coursesReasons
  position: relative;
  padding: 75px 0 40px
  background: url(./img/coursesReasons-bg.jpg) 50% 50% no-repeat
  background-size: cover;
  @media (max-width: $breakpoint-lg - 1)
    padding: 64px 0 50px
  @media (max-width: $breakpoint-md - 1)
    padding: 61px 0 49px

  &__title
    font-size: 36px
    line-height: 1
    position: relative;
    margin-bottom: 66px
    margin-left: -5px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 64px;
      line-height: 48px
      text-align: center;
      margin-left: 0
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 85px;
      br
        display: none;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      @media (max-width: $breakpoint-lg - 1)
        left: 50%

    &:before
      width: 14px;
      height: 14px;
      background: #006dfe;
      margin-top: 36px;
      margin-left: -3px;
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 19px
        margin-left: -8px
      @media (max-width: $breakpoint-md - 1)
        margin-top: 35px

    &:after
      width: 1px;
      height: 21px;
      background: #1d1d1d;
      margin-top: 15px;
      margin-left: 3px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: -2px;
        margin-left: -1px;
      @media (max-width: $breakpoint-md - 1)
        margin-top: 14px

  &__slider
    position: relative;
    border-top: 6px solid $blue
    padding-top: 50px
    margin-bottom: 38px
    @media (max-width: $breakpoint-lg - 1)
      overflow: hidden;
      border: 0
      padding: 0
      margin-bottom: 27px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 15px

    &:before, &:after
      content ''
      position: absolute;
      width: 6px
      height: 14px
      top: 0
      background: $blue
      @media (max-width: $breakpoint-lg - 1)
        display: none;

    &:before
      left: 0

    &:after
      right: 0

  &__items
    display: flex;
    margin: 0 -25px
    @media (max-width: $breakpoint-lg - 1)
      margin: 0

  &__item
    position: relative;
    margin: 0 15px
    flex: 1
    @media (max-width: $breakpoint-lg - 1)
      flex 1 0 auto
      margin: 0

    &:before, &:after
      content ''
      position: absolute;
      right: 0
      background: $blue
      @media (max-width: $breakpoint-lg - 1)
        right: 50px
        z-index: 1
      @media (max-width: $breakpoint-md - 1)
        right: 0

    &:before
      top: 0
      width: 6px
      height: 421px
      @media (max-width: $breakpoint-lg - 1)
        top: auto;
        bottom: 0
        height: 100%

    &:after
      top: 415px;
      height: 6px;
      width: 27px;
      @media (max-width: $breakpoint-lg - 1)
        background: $black
        top: auto;
        bottom: 0

  &__card
    min-height 416px
    background: #ffffff
    border-top: 6px solid $blue
    padding: 43px 32px 32px 32px
    @media (max-width: $breakpoint-lg - 1)
      position: relative;
      text-align: center;
      min-height auto
      height: 100%
      border: 0
      width 628px
      margin: 0 auto
      padding: 49px 32px 32px 32px
    @media (max-width: $breakpoint-md - 1)
      width: 100%

    &:before, &:after
      content: ''
      position: absolute;
      width: 6px
      z-index: 2

    &:before
      top: 0
      left: 0
      height: 27px
      background: $blue
      @media (max-width: $breakpoint-lg - 1)
        left: auto;
        right: 0
        height: 6px
        width: 271px

    &:after
      right: 0
      top: 51px
      height: 235px
      background: $black
      @media (max-width: $breakpoint-lg - 1)
        top: 50px
        bottom: 0
        height: auto;

  &__header
    font-size: 24px
    line-height: 1
    margin-bottom: 10px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 28px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 19px

    &:after
      content ''
      display: block;
      width: 72px
      height: 5px
      background: $blue
      border-right: 35px solid $black;
      margin-top: 5px
      margin-left: 2px
      @media (max-width: $breakpoint-lg - 1)
        margin: 12px auto 0

  &__text
    font-size: 18px
    line-height: 1.65
    @media (max-width: $breakpoint-lg - 1)
      max-width 510px
      margin: 0 auto

    p
      margin-bottom: 6px

  &__sub
    font-size: 36px
    line-height: 1
    font-weight: bold;
    text-align: center;
    position: relative;
    @media (max-width: $breakpoint-lg - 1)
      font-size: 30px
      line-height: 36px
    @media (max-width: $breakpoint-md - 1)
      font-size: 24px
      line-height: 30px

    &:before, &:after
      content: ''
      position: absolute;
      border-bottom: 6px solid $blue
      width: 89px;
      height: 26px;
      top: 34px;
      @media (max-width: $breakpoint-lg - 1)
        display: none;

    &:before
      left: 0
      border-left: 6px solid $blue

    &:after
      right: 0
      border-right: 6px solid $blue

  &__img
    position: absolute;
    bottom: 0
    left: 50%
    margin-left: -924px
    transform translateX(-30px)
    anim(.3s)

    &.lazy--visible
      transform none

  &__buttons
    display: none;
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 27px
      display: flex;
      justify-content center
    @media (max-width: $breakpoint-md - 1)
      margin-top: 34px

  &__nav
    display: flex;
    margin: 0 7px
