.sitesSelect
  padding: 73px 0 104px
  @media (max-width: $breakpoint-lg - 1)
    padding: 66px 0 56px
    text-align: center
  @media (max-width: $breakpoint-md - 1)
    padding: 56px 0 47px

  &__title
    margin-left: -2px
    @media (max-width: $breakpoint-lg - 1)
      margin-left: 0

    &:after
      content: ''
      display: block
      width: 14px
      height: 40px
      background-image: url('data:image/svg+xml;base64,PHN2ZyB2aWV3Qm94PSIwIDAgMTQgNDAiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0ibTAgMGgxNHYxNGgtMTR6IiBmaWxsPSIjMDA2ZGZlIi8+PHBhdGggZD0ibTAgMTRoMXYyNmgtMXoiIGZpbGw9IiMyMDIwMjAiLz48L3N2Zz4=');
      margin: 15px 0 16px 0
      @media (max-width: $breakpoint-lg - 1)
        margin-left: calc(50% - 1px)
        margin-top: 26px
        margin-bottom: 34px
      @media (max-width: $breakpoint-md - 1)
        margin-top: 26px;
        margin-bottom: 43px;

  &__content
    padding-left: 420px
    @media (max-width: $breakpoint-lg - 1)
      padding-left: 0

  &__text
    font-size: 18px
    line-height: 30px
    margin-bottom: 39px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 0
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 35px

    p
      margin-bottom: 30px;

  &__cta
    font-size: 30px
    font-weight: bold
    color: $blue
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 40px

    &:after
      content: ''
      display: block
      width: 52px
      height: 6px
      background: $blue
      margin-top: 4px;
      margin-bottom: 57px;
      margin-left: 2px;
      @media (max-width: $breakpoint-lg - 1)
        display: none

  &__buttons
    display: flex
    margin: 0px -11px
    @media (max-width: $breakpoint-md - 1)
      flex-direction column
      align-items center

    .btn
      flex: 1
      margin: 0 11px
      padding: 0
      @media (max-width: $breakpoint-lg - 1)
        flex none
        width: 100%
        max-width 353px
        margin-bottom: 23px

  &__image,
  &__image2
    position: absolute
    left: 50%
    bottom: 0
    z-index: 1
    anim(.3s)

    &.lazy--visible
      transform none
    @media (max-width: $breakpoint-lg - 1)
      display: none

  &__image
    margin-left: -578px
    //margin-bottom: 100px
    transform translateX(-50px)

  &__image2
    margin-left: -606px;
    margin-bottom: 262px;
    transform translateY(-15px)
