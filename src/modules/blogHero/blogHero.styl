@critical critical-blog.css
  .blogHero
    height: 458px
    @media (max-width: $breakpoint-lg - 1)
      min-height: 504px
    @media (max-width: $breakpoint-md - 1)
      min-height: 537px

    .c
      height: 100%
      padding-top: 67px
      @media (max-width: $breakpoint-lg - 1)
        align-items flex-start

    &__title
      font-size: 60px
      line-height: 1
      display: inline-block
      font-weight: bold;
      background-image: url(./blogHero-img.jpg);
      background-size: cover
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent
      margin-bottom: 20px
      margin-left: -7px
      @media (max-width: $breakpoint-lg - 1)
        text-align: left
        margin-left: 75px
      @media (max-width: $breakpoint-md - 1)
        text-align: center;
        margin-left: 0
        margin-bottom: 36px

    &__subtitle
      font-size: 30px
      font-weight: bold;
      color: #006dfe
      margin-left: -5px
      @media (max-width: $breakpoint-lg - 1)
        text-align: left
        margin-left: 77px
      @media (max-width: $breakpoint-md - 1)
        text-align: center;
        margin-left: 0
