.welcome
  background: url(./welcome-bg.jpg) calc(50% + 482px) 50% no-repeat,
          url(../../images/noise.jpg);
  padding: 95px 0 170px

  @media (max-width: $breakpoint-lg - 1)
    background: url(../../images/noise.jpg);
    padding: 67px 0 80px
  @media (max-width: $breakpoint-md - 1)
    text-align: center

  &__image
    display: block
    position: absolute
    bottom: -105px
    left: 50%
    margin-left: 380px
    pointer-events none
    z-index: 2
    transform translate(20px) rotate(15deg)
    anim(.3s)
    &.lazy--visible
      transform none
    @media (max-width: $breakpoint-lg - 1)
      display: none

  .c
    position: relative
    z-index: 1

  &__head
    width: auto
    margin: 0 auto
    margin-bottom: 65px
    font-weight: bold
    margin-left: 430px
    @media (max-width: $breakpoint-lg - 1)
      margin-left: 0
      margin-bottom: 20px
      padding: 0 75px
    @media (max-width: $breakpoint-md - 1)
      padding: 0

  &__sup
    font-size: 24px

  &__title
    font-size: 72px
    color: $blue
    @media (max-width: $breakpoint-md - 1)
      font-size: 60px

  &__cols
    display: flex
    flex-direction row-reverse
    align-items center
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      padding: 0 75px
    @media (max-width: $breakpoint-md - 1)
      padding: 0

  &__aside
    flex: 1
    padding: 0 70px 0 80px
    @media (max-width: $breakpoint-lg - 1)
      padding: 0

  &__text
    font-size: 18px
    line-height: 30px
    position: relative

    &:before
      content: ''
      display: block
      position: absolute
      width: 13px
      height: 13px
      background: $blue
      right: 100%
      margin-right: 7px
      top: 8px
      @media (max-width: $breakpoint-lg - 1)
        display: none

  &__cta
    font-size: 30px
    line-height: 36px
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 25px

    &:before
      content: ''
      display: block
      width: 1px
      height: 38px
      background: $blue
      margin: 30px 0
      @media (max-width: $breakpoint-lg - 1)
        display: none

  &__video
    position: relative
    width: 100%
    max-width 560px
    height: 432px
    //flex: 1
    @media (max-width: $breakpoint-lg - 1)
      max-width: none
      height: 368px
      margin-top: 35px

    &:before, &:after
      content ''
      display: block
      position: absolute
      @media (max-width: $breakpoint-lg - 1)
        display: none

    &:before
      background: url(./welcome-e.png)
      left: -1px
      top: -161px
      width: 239px
      height: 322px

    &:after
      background: url(./welcome-n.png)
      top: 100%
      right: 30px
      width: 256px
      height: 94px
