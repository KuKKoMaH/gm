.problems
  background: url(../../images/noise.jpg)
  padding: 120px 0 150px

  &__image
    position: absolute
    display: block
    left: 50%
    margin-left: 230px
    bottom: 0
    z-index: 1
    anim(.3s)
    transform translateX(30px)
    &.lazy--visible
      transform none

    @media (max-width: $breakpoint-lg - 1)
      background-image: none;
      display: none

  .c
    position: relative
    z-index: 1

  &__title
    font-size: 36px
    line-height: 48px
    max-width: 650px
    @media (max-width: $breakpoint-lg - 1)
      max-width none
      text-align: center
    @media (max-width: $breakpoint-lg - 1)
      font-size: 30px

    span
      color: $blue

  &__items
    position: relative
    counter-reset: problems
    height: 270px
    margin-top: 90px
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 79px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 57px
      height: 240px

  &__item
    font-size: 24px
    line-height: 36px
    position: absolute

    &:before
      counter-increment: problems
      content:'0' counter(problems)
      font-family: "Arial Black", sans-serif;
      font-size: 72px
      color: $blue
      pointer-events none
      font-weight: bold
      position: absolute
      z-index: -1
      left: -27px
      bottom: 0

    &--1,
    &--3,
    &--4
      &:after
        content: ''
        display: block
        position: absolute
        background: url(./problems-line-1.png) 50% 50% no-repeat;
        width: 124px
        height: 164px
        background-size: contain
        @media (max-width: $breakpoint-md - 1)
          display: none


    &--1
      top: 0
      left: 27px
      @media (max-width: $breakpoint-md - 1)
        left: 50%
        margin-left: -212px

      &:after
        left: 100%;
        top: 40px;
        margin-left: 12px;

    &--2
      top: 197px
      left: 195px
      @media (max-width: $breakpoint-md - 1)
        top: 0
        left: 50%
        margin-left: -29px

    &--3
      top: 0px
      left: 350px
      @media (max-width: $breakpoint-md - 1)
        top: 0
        left: 50%
        margin-left: 155px

      &:after
        left: -13px;
        top: 100%;
        margin-top: 22px;
        margin-left: 12px;
        transform rotate(180deg)

    &--4
      top: 170px
      left: 508px
      @media (max-width: $breakpoint-md - 1)
        top: 190px
        left: 50%
        margin-left: -200px

      &:after
        bottom: 100%;
        left: 0;
        margin-bottom: -40px;
        margin-left: -20px;
        transform: rotate(-106deg);
        @media (max-width: $breakpoint-lg - 1)
          margin-bottom: -20px;
          margin-left: -50px;
          transform: rotate(-126deg);
          width: 100px;
          height: 100px;

    &--5
      top: 0px
      left: 642px

      @media (max-width: $breakpoint-lg - 1)
        left: 555px

      @media (max-width: $breakpoint-md - 1)
        top: 190px
        left: 50%
        margin-left: 70px
