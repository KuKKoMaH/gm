.smmProcess
  position: relative
  padding: 76px 0 65px
  @media (max-width: $breakpoint-lg - 1)
    padding: 0

  &__content
    display: flex
    flex-direction column
    padding-left: 573px
    @media (max-width: $breakpoint-lg - 1)
      flex-direction row-reverse
      padding-left: 0
    @media (max-width: $breakpoint-md - 1)
      flex-direction column

  &__main
    font-size: 18px
    line-height: 36px
    @media (max-width: $breakpoint-lg - 1)
      width: 475px
      flex-grow 0
      //margin-top: 59px
      align-self center
    @media (max-width: $breakpoint-md - 1)
      width: auto
      text-align: center
      padding-top: 67px

    p
      margin-bottom: 14px
      @media (max-width: $breakpoint-lg - 1)
        margin-bottom: 35px
      @media (max-width: $breakpoint-md - 1)
        margin-bottom: 1px

      &:after
        content: ''
        display: block
        width: 31px
        height: 5px
        background: $blue
        margin-top: 17px
        margin-left: 1px
        @media (max-width: $breakpoint-lg - 1)
          display: none

      &:last-child:after
        display: none

  &__title
    font-size: 24px
    line-height: 31px
    font-weight: bold
    margin-bottom: 35px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 12px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 20px

    &:after
      content: ''
      display: block
      width: 13px
      height: 13px
      background: $blue
      margin-top: 10px;
      margin-left: 1px;
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 5px
      @media (max-width: $breakpoint-md - 1)
        position: relative
        margin-top: 23px
        left: 50%
        margin-left: -7px

  &__sub
    font-size: 18px
    line-height: 36px
    font-weight: bold
    margin-top: 11px
    @media (max-width: $breakpoint-lg - 1)
      align-self flex-end
      margin-top: 164px
    @media (max-width: $breakpoint-md - 1)
      display: flex
      align-items flex-start
      margin-top: 40px

  //&__about
  //  @media (max-width: $breakpoint-md - 1)
  //    flex-shrink 0

  &__name
    font-size: 24px
    color: $blue
    margin-bottom: 2px

  &__image
    position: absolute
    left: 50%
    margin-left: -591px
    bottom: 0
    transform translateX(-70px)
    anim(.25s)
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      display: none

    &.lazy--visible
      transform none

  &__image2
    display: none
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 19px;
      display: block
      anim(.25s)
    //flex-shrink 0
    @media (max-width: $breakpoint-md - 1)
      width: 195px
      height: auto
      margin-top: 0
      align-self flex-end

  &__player
    position: relative;
    border: 7px solid $blue
    padding: 21px 88px
    margin-top: 43px;
    margin-left: 2px;
    max-width: 500px;
    font-size: 18px
    line-height: 24px
    @media (max-width: $breakpoint-lg - 1)
      margin-right: 20px
      padding-left: 60px

    &:before
      content: ''
      position: absolute;
      height: 7px
      width: 300px
      background: $black
      right: 15px
      bottom: -7px

  &__logo
    position: absolute;
    left: -56px;
    bottom: -53px;

  &__button
    width: 53px
    height: 53px
    background: $blue
    position: absolute;
    right: 36px;
    top: 50%
    margin-top: -26px
    border-radius: 50%
    border: 2px solid $blue
    anim()

    &:hover
      background: #ffffff

    &--play
      & .smmProcess
        &__play
          opacity: 0

        &__pause
          opacity: 1

  &__play
    background: url(./sprite-play.png)
    position: absolute;
    top: 16px
    left: 19px
    anim()

  &__pause
    opacity: 0
    background: url(./sprite-pause.png)
    position: absolute;
    top: 16px
    left: 13px
    anim()

