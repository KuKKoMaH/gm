.context
  padding: 80px 0 80px
  background: url(../../images/noise.jpg)
  @media (max-width: $breakpoint-lg - 1)
    padding: 72px 0 40px
  @media (max-width: $breakpoint-md - 1)
    padding: 66px 0 48px

  .c
    position: relative
    z-index: 1

  &__title
    margin-bottom: 123px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 115px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 110px

  &__image
    position: absolute
    left: 50%
    bottom: 0
    z-index: 1
    margin-left: 357px;
    margin-bottom: -140px;

    img
      transform translateX(30px) rotate(15deg)
      anim(.25s)
      pointer-events none

      &.lazy--visible
        transform none
    @media (max-width: $breakpoint-lg - 1)
      display: none
