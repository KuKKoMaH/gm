.coursesNearest
  padding: 71px 0 83px
  background: #fff url(./img/coursesNearest-bg.jpg) 50% 100%;
  background-size: cover;
  @media (max-width: $breakpoint-lg - 1)
    padding: 60px 0 65px
  @media (max-width: $breakpoint-md - 1)
    padding: 60px 0 45px
    background: #fff

  &__title
    margin-bottom: 106px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 22px;
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 23px;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 50%
      @media (max-width: $breakpoint-lg - 1)
        display: none;

    &:before
      width: 14px;
      height: 14px;
      background: #006dfe;
      margin-top: 36px;
      margin-left: -7px;

    &:after
      width: 1px;
      height: 21px;
      background: #1d1d1d;
      margin-top: 15px;
      margin-left: -1px

  &__items
    display: flex;
    justify-content space-around
    padding: 0 85px
    position: relative;
    z-index: 2
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      padding: 0
      align-items center

  &__item
    position: relative;
    width: 300px
    line-height: 30px
    font-weight: bold;
    text-align: center;
    padding-top: 109px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 51px
      &:last-child
        margin-bottom: 0

    &:before, &:after
      content ''
      position: absolute;
      pointer-events none
      left: 50%

    &:before
      background: url(./img/sprite-coursesNearest-icon.png)
      top: 0
      margin-left: -55px

    &:after
      background: url(./img/sprite-coursesNearest-frame.png)
      top: 36px;
      margin-left: -204px;

    &:nth-child(2n)
      &:after
        transform scaleX(-1)

  &__label
    font-size: 24px
    margin-bottom: 8px

  &__name
    font-size: 30px

  &__button
    display: flex;
    justify-content center
    align-items center
    margin-top: 27px
    height: 76px
    border: 2px solid $blue
    background: $blue
    font-size: 18px
    line-height: 24px
    font-weight: bold;
    color: #ffffff
    padding: 0 40px
    anim()

    &:hover
      color: $black
      background: #ffffff
      border-color: $blue

  &__image
    position: absolute;
    bottom: 0
    left: 50%
    margin-left: 356px
    z-index: 1
    anim(.2s)
    @media (max-width: $breakpoint-lg - 1)
      margin-left: 191px
    @media (max-width: $breakpoint-md - 1)
      display: none;
