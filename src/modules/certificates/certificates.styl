.certificates
  padding: 74px 0 92px
  position: relative
  @media (max-width: $breakpoint-lg - 1)
    text-align: center
    padding: 61px 0 74px
  @media (max-width: $breakpoint-md - 1)
    padding: 63px 0 62px

  .c
    position: relative
    z-index: 1

  &__title
    position: relative
    margin-bottom: 90px
    margin-left: -4px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 112px
      margin-left: 0
      font-size: 30px
      .big
        font-size: 36px

      br
        display: none
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 100px
      .big
        font-size: 30px

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      margin-left: 2px
      @media (max-width: $breakpoint-lg - 1)
        left: 50%
        margin-left: -1px

    &:before
      width: 14px
      height: 14px
      background: $blue
      margin-top: 14px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 28px

    &:after
      width: 1px
      height: 27px
      background: $black
      margin-top: 14px + 14px;
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 28px + 14px

  &__text
    font-size: 18px
    line-height: 30px
    max-width 560px
    margin-left: -3px
    @media (max-width: $breakpoint-lg - 1)
      max-width: none
      margin: 0
      margin-top: 32px
    @media (max-width: $breakpoint-md - 1)
      margin-top: 47px

  &__certificate
    position: absolute
    left: 50%
    top: 0
    z-index: 3
    anim(.2s)
    @media (max-width: $breakpoint-lg - 1)
      position: static
      width: 116px
      height: 125px

    &--google
      margin-top: 201px;
      margin-left: 206px;
      @media (max-width: $breakpoint-lg - 1)
        margin: 0

    &--yandex
      margin-top: 54px;
      margin-left: 391px;
      @media (max-width: $breakpoint-lg - 1)
        margin: 0

  &__image
    position: absolute
    left: 50%
    margin-left: 34px;
    top: 177px;
    z-index: 1
    img
      transform translateX(40px) rotate(15deg)
      anim(.25s)

      &.lazy--visible
        transform none

    @media (max-width: $breakpoint-lg - 1)
      display: none