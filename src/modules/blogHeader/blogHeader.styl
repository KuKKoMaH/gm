.blogHeader
  &__image
    position: relative;
    z-index: 1
    margin-top: -93px
    border: 10px solid #006dfe
    height: 428px
    background-size: cover
    background-position: 50% 50%
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 0

    &:after
      content: ''
      position: absolute;
      width: 84px
      height: 5px
      background: #1d1d1d
      top: 100%
      left: 0
      margin-top: 10px
      margin-left: -10px

  &__sup
    display: flex;
    align-items center
    border-bottom: 1px solid #000000
    padding: 13px 0 14px
    margin-bottom: 31px
    @media (max-width: $breakpoint-lg - 1)
      padding: 19px 0
      margin-bottom: 37px
    @media (max-width: $breakpoint-md - 1)
      padding: 28px 0
      margin-bottom: 31px

  &__info
    display: contents
    @media (max-width: $breakpoint-md - 1)
      display: block;
      margin-right: auto;

  &__time
    margin-right: auto;
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 8px

  &__time, &__date
    &:before
      content: ''
      width: 6px
      height: 6px
      display: inline-block;
      vertical-align: middle;
      margin-right: 8px
      background: #006dfe

  &__share
    margin-left: 48px

