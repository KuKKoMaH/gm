.contextBullets
  background: url(../../images/noise.jpg)
  padding: 65px 0 76px
  position: relative
  @media (max-width: $breakpoint-lg - 1)
    text-align: center
    padding: 69px 0 74px
  @media (max-width: $breakpoint-md - 1)
    padding: 63px 0 74px

  .c
    position: relative
    z-index: 1

  &__title
    position: relative
    margin-bottom: 70px
    margin-left: -4px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 121px
      margin-left: 0

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      margin-left: 2px
      @media (max-width: $breakpoint-lg - 1)
        left: 50%
        margin-left: -1px

    &:before
      width: 14px
      height: 14px
      background: $blue
      margin-top: 14px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 28px

    &:after
      width: 1px
      height: 27px
      background: $black
      margin-top: 14px + 14px;
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 28px + 14px

  &__items
    @media (max-width: $breakpoint-lg - 1)
      display: flex
      flex-direction column
      align-items center


  &__item
    position: relative
    font-size: 18px
    margin-bottom: 40px

    svg
      position: absolute
      fill: $blue
      stroke $blue
      width: 44px
      height: 43px
      left: 0
      top: -14px
      z-index: -1

  &__button
    margin-top: 55px
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 27px

  &__image
    position: absolute
    left: 50%
    margin-left: 164px
    bottom: 0
    z-index: 1
    transform translateX(50px)
    anim(.3s)
    &.lazy--visible
      transform none
    @media (max-width: $breakpoint-lg - 1)
      display: none