.aboutTabs
  padding: 130px 0 90px
  @media (max-width: $breakpoint-lg - 1)
    padding: 45px 0 90px

  &__top
    background: #006dfe
    margin-bottom: 90px
    position: relative;
    @media (max-width: $breakpoint-lg - 1)
      height: 82px
      z-index: 2

  &__headers
    display: flex;
    justify-content space-around
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      padding-top: 82px
      left: 0
      right: 0
      pointer-events none

      &--active
        pointer-events all

        & ^[0]__header
          pointer-events all
          visibility: visible
          opacity: 1
          transform none

          &--active
            background: #000

        &:after
          transform rotate(180deg)

      &:after
        content: ''
        position: absolute;
        right: 38px;
        top: 34px;
        background: url(../../images/sprite-chevron-white.png)
        z-index: 11

  &__header
    position: relative;
    font-weight: bold;
    color: #ffffff
    height: 100%;
    padding: 23px 0 25px
    cursor: pointer;
    @media (max-width: $breakpoint-lg - 1)
      width: 100%
      border-top: 1px solid #2482fe
      padding: 27px 54px 26px
      visibility: hidden;
      opacity: 0
      anim()
      transform translateY(-20px)
      background: #006dfe

    &:after
      content: ''
      position: absolute;
      left: 0
      right: 0
      bottom: 0
      background: #000000
      height: 0
      anim()

    &--active, &:hover
      &:after
        height: 7px

    &--active
      @media (max-width: $breakpoint-lg - 1)
        pointer-events all
        visibility: visible
        opacity: 1
        transform none
        position: absolute;
        top: 0
        left: 0
        right: 0
        //background: #000
        border: 0
        z-index: 10
        transition none

        &:after
          display: none;


  &__items
    position: relative;

  &__item
    display: flex;
    align-items stretch
    position: absolute;
    left: 0
    top: 0
    width: 100%
    opacity: 0
    z-index: -1
    visibility: hidden;
    anim(.2s)

    &--active
      visibility: visible;
      position: static;
      opacity: 1
      z-index: 1

  &__image
    position: relative;
    width: 50%
    @media (max-width: $breakpoint-lg - 1)
      display: none;

    img
      position: absolute;
      left: 50%
      top: 50%
      max-width 100%
      max-height 100%
      width: auto
      height: auto;
      transform translate(-50%, -50%)

  &__content
    flex: 1

