@critical critical-context.css
  .contextHero
    &__title
      font-size: 120px
      line-height: 100px
      font-weight: bold
      margin-left: -8px
      @media (max-width: $breakpoint-lg - 1)
        margin-left: 0
      @media (max-width: $breakpoint-md - 1)
        font-size: 78px
        line-height: 78px

    @supports (-webkit-background-clip: text)
      &__bg
        background: url(../../images/textbg.jpg) 50% 50%;
        background-size: cover
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent

    &__bg
      display: block
      @media (max-width: $breakpoint-lg - 1)
        font-size: 100px
      @media (max-width: $breakpoint-md - 1)
        font-size: 78px

    &__sub
      display: block;
      font-size: 48px
      line-height: 1
      font-weight: bold
      color: $blue
      margin-left: -4px
      margin-top: 30px
      @media (max-width: $breakpoint-lg - 1)
        margin-left: 0
        line-height: 60px
        margin-top: 35px
      @media (max-width: $breakpoint-md - 1)
        font-size: 36px
        line-height: 48px
        margin-top: 25px

    &__image
      margin-left: 13px
      transform: translateX(50px)

    &__image2
      margin-left: 50px;
      margin-bottom: -125px
      img
        transform: translateX(30px) rotate(15deg)
      @media (max-width: $breakpoint-md - 1)
        width: 200px
        margin-left: 0px;
        bottom: -85px

    &__wave
      position: absolute
      background-repeat: no-repeat;
      opacity: 0
      left: 50%
      bottom: 0
      z-index: 2

      &--active
        animation-fill-mode both

      &--1&--active
        animation: wave1 .4s both ease-in-out .3s;

      &--2&--active
        animation: wave2 .4s both ease-in-out .6s;

      &--3&--active
        animation: wave3 .4s both ease-in-out .9s;

      &--1
        width: 4px
        height: 17px
        margin-left: 6px;
        margin-bottom: 716px;
        background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAARCAYAAAD66g1WAAAAeElEQVR4AU3ItbECUBQA0fcFd3fJCPGyqIFm6AeJSXB3dxa5DDtzkv1RhasiDXxo/6pXcRRhl5F6z7WMNNo4y8ijBiUjgcr3sKMuQ48TZjKi6OEmI4wWjDJc6MIs4x8b6GVsoMNRxgBXdGQ0UcIe6h9TjKFkHPHpDjkdGphEAemFAAAAAElFTkSuQmCC')

      &--2
        width: 6px
        height: 31px
        margin-left: -2px;
        margin-bottom: 709px;
        background-image: url('data:image/png;base64,')

      &--3
        width: 14px
        height: 51px
        margin-left: -12px;
        margin-bottom: 701px;
        background-image: url('data:image/png;base64,')

  @keyframes wave1 {
    from {
      opacity: 0
      transform translate(18px, 1px) scale(.2)
    }
    to {
      opacity: 1
      transform: none;
    }
  }

  @keyframes wave2 {
    from {
      opacity: 0
      transform translate(26px, -1px) scale(.2)
    }
    to {
      opacity: 1
      transform: none;
    }
  }

  @keyframes wave2 {
    from {
      opacity: 0
      transform translate(26px, -1px) scale(.2)
    }
    to {
      opacity: 1
      transform: none;
    }
  }

  @keyframes wave3 {
    from {
      opacity: 0
      transform translate(37px, 0px) scale(.2)
    }
    to {
      opacity: 1
      transform: none;
    }
  }
