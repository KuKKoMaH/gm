.coursesProblems
  position: relative;
  padding: 69px 0 76px
  @media (max-width: $breakpoint-lg - 1)
    padding: 67px 0 61px
  @media (max-width: $breakpoint-md - 1)
    padding: 66px 0 53px

  &__title
    max-width 620px
    margin-bottom: 107px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 110px;
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 87px;

    &:before, &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 50%

    &:before
      width: 14px;
      height: 14px;
      background: #006dfe;
      margin-top: 36px;
      margin-left: -7px;

    &:after
      width: 1px;
      height: 21px;
      background: #1d1d1d;
      margin-top: 15px;
      margin-left: -1px

  &__items
    display: flex;
    flex-wrap wrap
    margin-bottom: 23px
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column
      margin-bottom: 2px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 6px

  &__item
    width: 50%
    position: relative;
    margin-bottom: 36px
    padding-right: 20px
    @media (max-width: $breakpoint-lg - 1)
      width: 100%
      max-width 580px
      margin: 0 auto 32px
      text-align: center;
      padding-right: 0
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 29px

  &__counter
    font-family: 'Arial', sans-serif
    font-weight: 900
    font-size: 36px
    line-height: 1
    margin-bottom: 6px
    @media (max-width: $breakpoint-lg - 1)
      position: absolute;
      right: 50%
      margin-right: 44px
      top: 17px
    @media (max-width: $breakpoint-md - 1)
      margin-right: 25px
      top: 20px

    &:before
      content ''
      display: inline-block;
      vertical-align: middle;
      width: 17px
      height: 17px
      background: #c4c4c4
      margin: 0 13px 9px 0px
      @media (max-width: $breakpoint-lg - 1)
        margin: 0
        position: absolute;
        top: 9px
        left: 12px
        z-index: -1

  &__icon
    position: absolute;
    left: 30px;
    top: 67px;
    transform translate(-50%, -50%)

    img
      display: block;
    @media (max-width: $breakpoint-lg - 1)
      position: relative;
      left: 0
      top: 0
      transform none
      height: 60px
      img
        position: absolute;
        top: 50%
        left: 50%
        transform translate(-50%, -50%)
    @media (max-width: $breakpoint-md - 1)
      margin-left: 36px


  &__header
    padding-left: 95px
    font-size: 30px
    line-height: 1.2
    margin-bottom: 32px
    color: $blue
    @media (max-width: $breakpoint-lg - 1)
      padding-left: 0
      margin-bottom: 23px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 26px

  &__text
    font-size: 18px
    line-height: 1.65


  &__sub
    position: relative;
    font-size: 48px
    line-height: 36px
    text-align: center;
    font-weight: bold;
    padding: 0 100px 47px
    @media (max-width: $breakpoint-lg - 1)
      font-size: 36px
      padding: 0 90px 18px

    span
      &:before, &:after
        content: ''
        height: 10px
        bottom: 0;
        position: absolute;
        background: $blue
        @media (max-width: $breakpoint-lg - 1)
          height: 8px

      &:before
        left: 90px
        width: 300px
        @media (max-width: $breakpoint-lg - 1)
          left: 50px
          right: 50px
          width: auto;
        @media (max-width: $breakpoint-md - 1)
          left: -20px
          right: -20px

      &:after
        right: 90px
        width: 400px
        @media (max-width: $breakpoint-lg - 1)
          display: none;

    &:before, &:after
      content: ''
      position: absolute;
      top: 14px
      bottom: 0
      width: 90px
      border: 10px solid $blue
      @media (max-width: $breakpoint-lg - 1)
        border-width: 8px
        top: 15px
        width: 30px
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      left: 0
      border-right: 0
      @media (max-width: $breakpoint-lg - 1)
        left: 49px

    &:after
      right: 0
      border-left: 0
      @media (max-width: $breakpoint-lg - 1)
        right: 49px

  &__image
    position: absolute;
    top: -10px
    margin-left: 231px
    left: 50%
    z-index: 1
    @media (max-width: $breakpoint-lg - 1)
      top: auto;
      bottom: 37px;
      margin-left: 200px;
    @media (max-width: $breakpoint-md - 1)
      transform scale(.85)
      bottom: 153px;
      margin-left: 109px;
