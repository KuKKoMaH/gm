.coursesWelcome
  padding: 74px 0 111px
  @media (max-width: $breakpoint-lg - 1)
    padding: 39px 0 107px
  @media (max-width: $breakpoint-md - 1)
    padding: 47px 0 100px

  &__items
    display: flex;
    margin: 0 -17px 96px
    @media (max-width: $breakpoint-lg - 1)
      flex-wrap wrap
      justify-content center
      margin: 0 0 38px
    @media (max-width: $breakpoint-md - 1)
      flex-direction column
      align-items center
      margin-bottom: 47px

  &__item
    position: relative;
    border: 15px solid $blue
    margin: 0 17px
    flex: 1
    font-size: 24px
    font-weight: bold;
    display: flex;
    align-items center
    justify-content center
    height: 186px
    flex-shrink 0
    @media (max-width: $breakpoint-lg - 1)
      max-width: 362px
      flex: auto
      margin: 0 1px 27px
    @media (max-width: $breakpoint-md - 1)
      width: 100%

    &:after
      content ''
      position: absolute;
      width: 36px;
      height: 36px;
      background: #1d1d1d;
      right: 19px;
      bottom: -33px;

  &__block, &__title
    &:before, &:after
      content ''
      position: absolute;
      background: $black
      height: 15px
      @media (max-width: $breakpoint-lg - 1)
        height: 8px
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      left: 0

    &:after
      right: 0

  &__block
    position: relative;
    border: 15px solid $black
    border-top: 0
    border-bottom: 0
    text-align: center;
    padding: 1px
    @media (max-width: $breakpoint-lg - 1)
      border-width: 8px;
    @media (max-width: $breakpoint-md - 1)
      border: 0

    &:before, &:after
      bottom: 0
      width: 275px
      @media (max-width: $breakpoint-lg - 1)
        width: 71px

    span
      color: $blue

    .btn
      font-size: 24px
      display: flex;
      max-width 430px
      margin: 0 auto -32px
      @media (max-width: $breakpoint-lg - 1)
        margin-bottom: -34px


  &__title
    margin-top: -19px
    font-weight: bold;
    font-size: 48px
    line-height: 1
    margin-bottom: 17px
    @media (max-width: $breakpoint-md - 1)
      font-size: 36px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 18px

    &:before
      border-right: 30px solid $blue

    &:after
      border-left: 30px solid $blue

    &:before, &:after
      top: 0
      width: 175px
      @media (max-width: $breakpoint-lg - 1)
        width: 42px
        border: 0

  &__text
    font-size: 24px
    line-height: 1.25
    font-weight: bold;
    margin-bottom: 74px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 43px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 35px

  &__image
    position: absolute;
    left: 50%
    margin-left: -616px;
    bottom: -198px;
    z-index: 4

    img
      anim(.3s)
      transform translateX(-30px)

      &.lazy--visible
        transform none
