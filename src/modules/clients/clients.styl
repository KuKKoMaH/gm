.clients
  background: url(../../images/noise.jpg);
  padding 94px 0 100px
  @media (max-width: $breakpoint-lg - 1)
    padding: 74px 0 77px
    overflow: hidden
  @media (max-width: $breakpoint-md - 1)
    padding: 56px 0 65px

  &__image
    display: block
    position: absolute
    background-image: url(../../images/bust3.png);
    left: 50%
    margin-left: -651px;
    bottom: -125px;
    pointer-events: none;
    z-index: 2;
    transform translateX(-30px) rotate(-15deg)
    anim(.3s)

    &.lazy--visible
      transform none

    @media (max-width: $breakpoint-lg - 1)
      display: none
      background-image: none;

  .c
    position: relative;
    z-index: 1

  &__title
    text-align: center
    margin-bottom: 83px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 71px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 48px

  &__items
    display: flex
    flex-wrap wrap
    margin: 0 -25px
    align-items center
    justify-content center
    @media (max-width: $breakpoint-lg - 1)
      margin: 0 -15px

    &--primary ^[0]__item
      width: 16.6666%
      height: 138px
      padding: 0 15px 30px
      @media (max-width: $breakpoint-lg - 1)
        width: 25%
        padding: 0 14px 33px
        height: 135px
      @media (max-width: $breakpoint-md - 1)
        width: 33.3333%
        padding: 0 5px 10px
        height: 112px

    &--secondary
      margin-top: 7px
      @media (max-width: $breakpoint-lg - 1)
        position: absolute
        visibility: hidden
        opacity: 0
        transform translateY(50px)
        anim(.3s)

      & ^[0]__item
        padding: 0px 15px 26px
        width: 14.2857%
        height: 118px
        @media (max-width: $breakpoint-lg - 1)
          width: 25%
          padding: 0 14px 33px
          height: 135px

        @media (max-width: $breakpoint-md - 1)
          width: 33.3333%
          padding: 0 5px 10px
          height: 112px

    &--active
      visibility: visible
      position: static
      opacity: 1
      transform none

  &__inner
    background: #ffffff
    height: 100%
    box-shadow: 0 0 17px rgba($black, .1)
    display: flex
    align-items center
    justify-content center
    padding: 12px

    img
      display: block
      max-width 100%
      max-height 100%

  &__more
    display: none
    text-align: center
    margin-top: 44px
    width: 100%
    left: 0
    opacity: 1
    anim()
    @media (max-width: $breakpoint-lg - 1)
      display: block
    @media (max-width: $breakpoint-md - 1)
      margin-top: 58px

    &--hidden
      position: absolute
      visibility: hidden
      opacity: 0

  &__button
    min-width 382px

