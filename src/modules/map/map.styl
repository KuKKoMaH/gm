.map
  @media (max-width: $breakpoint-lg - 1)
    padding 68px 0 79px
  @media (max-width: $breakpoint-md - 1)
    padding 58px 0 79px

  &__map
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%

  .c
    position: relative
    z-index: 1
    display: flex
    align-items center
    @media (max-width: $breakpoint-lg - 1)
      flex-direction column

  &__left
    @media (max-width: $breakpoint-lg - 1)
      display: flex
      flex-direction column
      align-items center
      margin-bottom: 48px

  &__title
    margin-left: -3px
    position: relative
    margin-bottom: 73px
    @media (max-width: $breakpoint-lg - 1)
      text-align: center
      margin-bottom: 34px
    @media (max-width: $breakpoint-md - 1)
      margin-bottom: 38px

    &:before, &:after
      content: ''
      display: block
      position: absolute
      left: 1px
      top: 100%
      @media (max-width: $breakpoint-lg - 1)
        display: none

    &:before
      width: 14px
      height: 14px
      background: $blue
      margin-top: 9px

    &:after
      width: 1px
      height: 26px
      background: $black
      margin-top: 23px

  &__sup
    font-size: 16px
    font-weight: bold
    color: $blue
    margin-bottom: 28px
    margin-left: -2px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 9px

    &:before, &:after
      content: ''
      display: block

    &:before
      background: url(../../images/sprite-halfgeo.png)
      margin-bottom: 22px
      @media (max-width: $breakpoint-lg - 1)
        display: none

    &:after
      width: 27px
      height: 5px
      background: $blue
      margin-top: 9px
      @media (max-width: $breakpoint-lg - 1)
        margin-top: 4px

  &__address
    font-size: 16px
    font-weight: bold
    margin-bottom: 30px
    margin-left: -2px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 18px

  &__contact
    font-size: 16px
    font-weight: bold
    margin-left: -2px

  &__phone
    font-size: 30px
    display: inline-block
    margin-left: 4px

    span
      color: $blue

  &__right
    width: 460px
    flex-shrink: 0
    background: url(../../images/noise.jpg)
    padding: 67px 0
    @media (max-width: $breakpoint-lg - 1)
      padding: 10px 0
      width: auto
      margin: 0 10px

  &__form
    border: 20px solid $blue
    border-top: 0
    border-bottom: 0
    position: relative
    @media (max-width: $breakpoint-lg - 1)
      border-width: 15px
      padding-bottom: 38px

    &:before, &:after
      content: ''
      display: block
      position: absolute
      width: 20px
      height: 20px
      background: $blue
      bottom: 0
      @media (max-width: $breakpoint-lg - 1)
        width: 24px
        height: 15px

    &:before
      left: 0px

    &:after
      right: 0px

  &__head
    font-size: 24px
    line-height: 20px
    font-weight: bold
    color: $blue
    text-align: center
    margin-bottom: 42px
    @media (max-width: $breakpoint-lg - 1)
      padding-top: 52px
      margin-bottom: 21px
    @media (max-width: $breakpoint-md - 1)
      padding-top: 48px

    &:before, &:after
      content: ''
      display: block
      position: absolute
      width: 20px
      height: 20px
      background: $blue
      top: 0
      @media (max-width: $breakpoint-lg - 1)
        width: 24px
        height: 15px

    &:before
      left: 0px

    &:after
      right: 0px

  &__text
    padding: 0 20px
    text-align: center
    font-size: 18px
    line-height: 36px
    margin-bottom: 44px
    @media (max-width: $breakpoint-lg - 1)
      margin-bottom: 36px

  &__input
    padding: 0 28px
    margin-bottom: 21px

  &__button
    margin-top: 53px
    text-align: center
    @media (max-width: $breakpoint-lg - 1)
      margin-top: 61px