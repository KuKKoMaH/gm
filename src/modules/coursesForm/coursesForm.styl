.coursesForm
  padding: 160px 0 79px
  background: url(./coursesForm-bg.jpg) 50% 50%
  background-size: cover;
  @media (max-width: $breakpoint-lg - 1)
    padding: 124px 0 62px
  @media (max-width: $breakpoint-md - 1)
    padding: 129px 0 59px

  .c
    position: relative;
    z-index: 1

    &:before, &:after
      content: ''
      position: absolute;
      top: 32px
      bottom: -45px
      border: 20px solid $blue;
      width: 100px
      @media (max-width: $breakpoint-lg - 1)
        display: none;

    &:before
      right: 50%
      margin-right: 417px
      border-right: 0

    &:after
      left: 50%
      margin-left: 413px
      border-left: 0

  &__container
    position: relative;
    max-width 710px
    margin: 0 auto 108px
    background: #fff url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAUCAYAAACNiR0NAAAAKElEQVR4AWMQEhJExvwgmhI8NAzkx4Wp7sJhbyACjxo4auCogaMGAgBTtVOU+ABQ6wAAAABJRU5ErkJggg==') 50% 50%
    padding: 42px 0 68px
    text-align: center;
    box-shadow 0px 0px 35px 0px rgba(29, 29, 29, 0.35)
    @media (max-width: $breakpoint-lg - 1)
      max-width 692px
    @media (max-width: $breakpoint-md - 1)
      margin: 0 -20px 108px

    &:before, &:after
      content: ''
      position: absolute;
      z-index: -1

    &:before
      top: -66px
      bottom: 31px
      left: -32px
      right: -28px
      background: $blue url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAUCAYAAACNiR0NAAAAKElEQVR4AWMQEhJExv9BNCV4aBj4HxemuguHvYEIPGrgqIGjBo4aCAAitF/EphU1sgAAAABJRU5ErkJggg==') 50% 50%
      @media (max-width: $breakpoint-lg - 1)
        left: -20px;
        right: -17px;
      @media (max-width: $breakpoint-md - 1)
        left: 0
        right: 0

    &:after
      height: 20px
      left: -162px;
      right: -158px;
      top: 100%;
      margin-top: 25px;
      background: $blue
      @media (max-width: $breakpoint-lg - 1)
        display: none;

    p
      font-size: 24px
      line-height: 1.5
      margin-bottom: 12px

  &__title
    font-size: 36px
    margin-bottom: 20px

    &:before, &:after
      content: ''
      position: absolute;
      width: 10px
      top: 59px
      bottom: 49px
      background: $blue
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      left: 38px
      @media (max-width: $breakpoint-lg - 1)
        left: 30px

    &:after
      right: 38px
      @media (max-width: $breakpoint-lg - 1)
        right: 32px

  &__text
    padding: 0 60px
    margin-bottom: 33px
    @media (max-width: $breakpoint-lg - 1)
      padding: 0 40px

    &:before, &:after
      content: ''
      position: absolute;
      height: 10px
      width: 102px
      bottom: 49px
      background: $blue

    &:before
      left: 38px
      @media (max-width: $breakpoint-lg - 1)
        left: 30px
      @media (max-width: $breakpoint-md - 1)
        left: 0
        width: 47px

    &:after
      right: 38px
      @media (max-width: $breakpoint-lg - 1)
        right: 32px
      @media (max-width: $breakpoint-md - 1)
        right: 0
        width: 45px

  &__form
    max-width 370px
    margin: 0px auto 0

    &:before, &:after
      content: ''
      position: absolute;
      height: 10px
      width: 30px
      top: 59px
      background: $blue
      @media (max-width: $breakpoint-md - 1)
        display: none;

    &:before
      left: 38px
      @media (max-width: $breakpoint-lg - 1)
        left: 30px

    &:after
      right: 38px
      @media (max-width: $breakpoint-lg - 1)
        right: 32px

    .input
      margin-bottom: 20px

  &__button
    position: absolute;
    top: 100%
    width: 630px
    height: 108px
    left: 50%
    transform translateX(-50%)
    background: $black
    border: 2px solid $black;
    border-bottom: 8px solid $blue
    font-size: 36px
    color: #ffffff
    anim()
    @media (max-width: $breakpoint-md - 1)
      left: 20px
      width: calc(100% - 40px)
      transform none

    &:hover
      background: #ffffff
      color: $black
