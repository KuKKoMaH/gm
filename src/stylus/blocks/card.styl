.card
  position: relative
  width: 362px
  border: 15px solid #e9e9e9
  border-bottom: 0
  background: #e9e9e9
  anim(.2s)

  &:before, &:after
    content: ''
    position: absolute
    width: 16px
    height: 15px
    background: #e9e9e9
    bottom: 0
    anim(.2s)
    z-index: 1

  &:before
    left: 0

  &:after
    right: 0

  &:hover
    border-color: $blue

    &:before, &:after
      background: $blue

    & ^[0]__inner:after
      opacity: 0

    & ^[0]__over
      transform none

  @media (max-width: $breakpoint-lg - 1)
    border-color: $blue

    &:before, &:after
      background: $blue

    & ^[0]__inner:after
      opacity: 0

    & ^[0]__over
      transform none

  &__inner
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    overflow: hidden

    &:after
      content: ''
      display: block
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      height: 100%
      background: linear-gradient(to bottom, rgba(0, 109, 254, 0) 40%, rgba(0, 109, 254, .7) 100%);
      anim(.2s)

  &__image
    anim()

  //&.lazy--visible

  &__name
    position: absolute
    background: #ffffff
    left: 26px
    right: 26px
    top: 100%
    margin-top: -44px
    height: 134px
    display: flex
    align-items center
    justify-content center
    text-align: center
    font-size: 24px
    line-height: 30px
    box-shadow 0 0 25px 0 rgba($black, .1)

    &:after
      content: ''
      display: block
      position: absolute
      left: 0
      bottom: 0
      width: 16px
      height: 16px
      background: $blue

  &__over
    position: absolute
    background: rgba($blue, .9);
    top: 0
    left: 0
    width: 100%
    display: flex
    align-items flex-start
    justify-content space-around
    padding: 20px 0
    anim(.2s)
    transform translateY(-100%)
    z-index: 2

  &__over-item
    text-align: center
    color: #ffffff
    font-size: 16px
    line-height: 30px
    display: flex
    flex-direction column
    align-items center
    justify-content center

  &__number
    border: 1px dashed $black
    //height: 40px
    display: flex
    align-items center
    justify-content center
    border-radius: 20px
    min-width 77px
    padding: 4px 15px
    margin: 13px auto 0

  &__icon
    margin-bottom: 12px

    svg
      fill: #fff
      display: block
      margin: 0 auto

    &--magnifier
      svg
        width: 54px
        height: 52px

    &--graph
      svg
        width: 59px
        height: 50px
