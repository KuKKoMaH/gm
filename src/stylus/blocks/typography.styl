h1, h2, h3, h4, h5, h6
  line-height: 1.4
  font-weight: 500
  margin-bottom: 1em

h1, h2
  font-size: 2rem

h1
  margin-bottom: 3rem
  @media screen and (max-width: $breakpoint-lg - 1)
    margin-bottom: 3.5rem

h2
  margin-bottom: 4rem

h3
  font-size: 1.8rem

h4
  font-size: 1.5rem

h5
  font-size: 1.3rem

h6
  font-size: 1.1rem

b, strong
  font-weight: bold

p
  margin-bottom: 2rem
  @media screen and (max-width: $breakpoint-lg - 1)
    margin-bottom: 2.5rem

a
  color: $blue
  border-bottom: 1px solid #42bde4
  anim()

  &:hover
    border-color: transparent

ul, ol
  margin-bottom: 2rem
  @media screen and (max-width: $breakpoint-lg - 1)
    margin-bottom: 2.5rem

  li
    margin-bottom: 1em
    position relative

ul
  li
    padding-left: 22px

    &:before
      content: ''
      width: 7px
      height: 7px
      background: $blue
      position absolute
      top: .6em;
      left: 2px;

ol
  counter-reset: list;

  li
    padding-left: 24px

    &:before
      counter-increment: list;
      content: counter(list) "."
      position absolute
      top: 0;
      left: 2px;
      color: $blue
      font-weight: bold;

del, s
  text-decoration: line-through

blockquote
  background: #f5fcfe
  border-radius: 7px
  font-style italic
  font-weight: 300
  padding: 40px 50px
  position: relative;
  margin-bottom: 3rem
  @media screen and (max-width: $breakpoint-lg - 1)
    border-radius: 5px
    padding: 24px 30px
    margin-bottom: 3.5rem
    padding-bottom: 8px

  cite
    position: absolute;
    font-size: 1rem
    color: #42bde4
    text-align: right;
    right: 52px
    bottom: 44px
    @media screen and (max-width: $breakpoint-lg - 1)
      right: auto;
      left: 30px
      bottom: 18px

//position: static;

.wp-block-image
  margin-bottom: 3rem
  @media screen and (max-width: $breakpoint-lg - 1)
    margin-bottom: 3.5rem

  img
    border-radius: 7px
    max-width 100%
    height: auto;
    display: block;
    @media screen and (max-width: $breakpoint-lg - 1)
      border-radius: 5px

  figcaption
    margin: 10px 0 0
    font-size: .85rem

.content
  font-size: 1.25rem
  @media screen and (max-width: $breakpoint-lg - 1)
    font-size: 1.2rem

.has-small-font-size
  font-size: 1rem

table
  width: 100%
  font-size: 1rem
  border-collapse separate
  margin-bottom: 3rem
  @media screen and (max-width: $breakpoint-lg - 1)
    margin-bottom: 3.5rem

  thead
    background: linear-gradient(to top, #41bce4, #76dbfc);
    color: #ffffff
    @media screen and (max-width: $breakpoint-lg - 1)
      display: none;
    @media print
      background-color: transparent;
      border: 1px solid #eef0f0

    th
      height: 70px
      border-left: 1px solid #79d5f2
      border-top: 0
      border-bottom: 0
      vertical-align middle
      padding: 0 28px
      @media print
        border: 1px solid #eef0f0

      &:first-child
        border-left: 0
        border-radius: 7px 0 0 0
        @media print
          border: 1px solid #eef0f0

      &:last-child
        border-radius: 0 7px 0 0

  tbody
    font-weight: 300

    tr
      @media screen and (max-width: $breakpoint-lg - 1)
        display: block;
        border: 1px solid #eef0f0
        border-top: 0
        padding: 25px 28px
        &:first-child
          border-top: 1px solid #eef0f0;
          border-radius: 5px 5px 0 0;

        &:last-child
          border-radius: 0 0 5px 5px

    td
      border-left: 1px solid #eef0f0
      border-top: 1px solid #eef0f0
      padding: 21px 28px
      @media screen and (max-width: $breakpoint-lg - 1)
        display: block;
        border: 0
        padding: 0
        font-size: 1.2rem
        margin-bottom: 1rem
        &:before
          content attr(data-title)
          display: block;
          color: $blue
          font-size: 1rem
          margin-bottom: -4px

      &:last-child
        border-right: 1px solid #eef0f0
        @media screen and (max-width: $breakpoint-lg - 1)
          border: 0;


  > *:last-child tr:last-child
    td
      border-bottom: 1px solid #eef0f0
      @media screen and (max-width: $breakpoint-lg - 1)
        border: 0

      &:first-child
        border-radius: 0 0 0 7px

      &:last-child
        border-radius: 0 0 7px 0


