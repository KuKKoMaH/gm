.hero
  background: url(../../images/mountains.jpg) 50% 100% repeat-x;
  @media (max-width: $breakpoint-lg - 1)
    text-align: center

  .c
    display: flex
    flex-direction column
    justify-content center
    align-items flex-start
    height 868px
    position: relative
    z-index: 2
    @media (max-width: $breakpoint-lg - 1)
      height: 95vh
      max-height 750px
      align-items center

  // ========================================================
  // BACKGROUND TEXT
  // ========================================================

  &__bgText
    position: absolute
    font-size: 392px
    font-weight: bold
    left: 50%
    margin-left: -790px
    top: 50%
    margin-top: -215px
    color: #f3f3f3
    z-index: 1
    pointer-events none
    @media (max-width: $breakpoint-lg - 1)
      font-size: 151px
      margin-left: -290px
      margin-top: 11px
    @media (max-width: $breakpoint-md - 1)
      margin-left: -245px
      font-size: 120px

    span
      color: $blue
      @media (max-width: $breakpoint-lg - 1)
        color: #f3f3f3

    &--small
      font-size: 80px
      margin-left: -530px;
      margin-top: 143px;
      @media (max-width: $breakpoint-lg - 1)
        font-size: 31px
        margin-left: -190px
        margin-top: 155px
      @media (max-width: $breakpoint-md - 1)
        font-size: 24px
        margin-left: -160px
        margin-top: 125px

  // ========================================================
  // IMAGE
  // ========================================================

  &__image,
  &__image2
    position: absolute
    pointer-events none
    z-index: 2
    left: 50%
    bottom: 0
    anim(.3s)

    &.lazy--visible
      transform: none

  &__image
    @media (max-width: $breakpoint-lg - 1)
      display: none

  &__image2
    display: none
    @media (max-width: $breakpoint-lg - 1)
      display: block

