.select
  position: relative

  .selectize-input
    margin: 0 1px
    padding: 26px 40px 25px 30px
    border solid 1px $grey-middle
    background: #ffffff
    position: relative
    white-space: nowrap
    anim()

    //@media (max-width: $breakpoint-sm - 1)
    //  padding-top: 8px
    //  padding-bottom: 8px

    &:before,
    &:after
      content: ''
      display: block
      position: absolute
      width: 6px
      height: 1px
      background: $blue
      anim()
      right: 20px
      top: 35px

    &:before
      transform: rotate(-45deg) translateY(3px)

    &:after
      transform: rotate(45deg) translateY(3px)

    &.dropdown-active
      &:before
        transform: rotate(-45deg) translateY(-3px)

      &:after
        transform: rotate(45deg) translateY(-3px)

    &.disabled
      background-color: #dfdfdf

    .item
      vertical-align: top
      font-size: 15px
      font-weight: 500
      display: inline-block
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
      max-width: 100%

    input
      display: none

  .input-active
    margin: 0
    padding: 25px 40px 24px 30px
    border: 2px solid $blue

  .selectize-dropdown
    position: absolute
    margin-top: 10px
    z-index: 10
    border: 1px solid $grey-middle
    background: #ffffff
    max-height: 200px
    overflow-y: scroll
    width: auto !important;
    min-width: 100%;
    max-width: 100%

    .option
      font-size: 15px
      line-height: 21px
      font-weight: 500
      padding: 12px 30px
      //white-space: nowrap
      //overflow: hidden
      //text-overflow: ellipsis
      cursor: pointer
      anim()

      &.active, &:hover
        color: $blue
