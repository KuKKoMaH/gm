html
  font-family: 'PT Sans', sans-serif;
  color: $black
  font-size: 16px

html, body
  overflow-x: hidden

b
  font-weight: bold

.c
  padding: 0 10px
  margin-left: auto
  margin-right: auto
  max-width: $container-lg
  width: 100%
  @media (max-width: $breakpoint-lg - 1)
    max-width: $container-md
    padding: 0 20px
  @media (max-width: $breakpoint-md - 1)
    max-width: 100%

.page
  //anim(.2s)
  will-change filter

  &.mfp-body-open
    filter: blur(10px)
    overflow: hidden


.noise
  background: url(images/noise.jpg);

.lazy
  visibility: hidden
  opacity: 0

  &.lazy--visible
    visibility: visible
    opacity: 1

//transform none

img[data-src],
img[data-srcset]
  //display: block;
  min-height: 1px;

.hidden
  display: none

#sprites
  position: absolute
  width: 0
  height: 0
  top: 0
  left: 0

.icon-lines
  width: 28px
  height: 13px

.icon-pdf
  width: 40px
  height: 37px
  fill: $blue

.paroller
  will-change: transform;
  transition: transform 0.1s ease-out !important;
  @media (pointer: coarse)
    transition none !important

.smoke
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

